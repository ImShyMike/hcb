<div class="container--sm mx-auto">
  <%= form_with model: [@event, @event.check_deposits.build] do |form| %>
    <div class="grid">
      <div class="field">
        <%= form.label :front, "Front of check" %>
        <div class="field--image-upload" data-controller="image-upload-preview">
          <%= form.label :front, "Click to upload front image", data: { image_upload_preview_target: "preview" } %>
          <%= form.file_field :front, accept: "image/*", required: true, disabled: @event.demo_mode?, direct_upload: true, data: { action: "image-upload-preview#set" } %>
        </div>
      </div>

      <div class="field">
        <%= form.label :back, "Back of check" %>
        <div class="field--image-upload" data-controller="image-upload-preview">
          <%= form.label :back, "Click to upload back image", data: { image_upload_preview_target: "preview" } %>
          <%= form.file_field :back, accept: "image/*", required: true, disabled: @event.demo_mode?, direct_upload: true, data: { action: "image-upload-preview#set" } %>
        </div>
      </div>
    </div>

    <div class="field">
      <%= form.label :amount_cents, "Amount on check" %>
      <div class="flex items-center">
        <span class="bold muted shrink-none" style="width: 1rem;">$</span>
        <%= form.number_field :amount_cents, placeholder: "10.00", required: true, min: 0.01, step: 0.01, disabled: @event.demo_mode? %>
      </div>
    </div>

    <div class="actions">
      <% if @event.demo_mode? %>
        <%= form.submit "Unavailable in Playground Mode", disabled: true %>
      <% else %>
        <%= form.submit "Submit deposit", class: "shrink-0", data: { disable_with: "Uploading..." } %>
        <div class="warning flex mt-3 gap-2"><%= inline_icon "important" %> <span>Check deposits are currently delayed and may take up to <span class="whitespace-nowrap font-bold">1 week</span> to process.</span></div>
      <% end %>
    </div>
  <% end %>
</div>
