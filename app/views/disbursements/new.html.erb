<% title "Initiate a disbursement" %>
<% page_sm %>
<%= render "events/nav" if @event %>

<h1>Transfer between organizations</h1>

<div class="card border b--warning pb0 mt3 mb3">
  <div class="flex items-center warning">
    <%= inline_icon "info", size: 32, class: "mr1" %>
    <p class="bold mt0 mb0">Important info about transfers:</p>
  </div>
  <p class="mt1 mb2">
    Transfers are reviewed by the HCB team and process within 24 hours on weekdays.
  </p>
  <div class="border-top card__banner card__darker secondary">
    <strong class="warning">Questions?</strong>
      <%= help_message %>
  </div>
</div>

<% unless @allowed_destination_events.any? %>
  <p class="h5 muted">It looks like you don't have any organizations to transfer to. You can transfer funds between any organizations you're a part of as long as the destination organization has Transparency Mode enabled.</p>
<% end %>

<%= render "form", disbursement: @disbursement %>
