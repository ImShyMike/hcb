<%= link_to admin_signed_in? ? document : document_download_path(document) do %>
  <li class="card card--hover h-100">
    <div class="overflow-hidden" style="max-height: 270px;">
      <%= render "documents/preview", document: %>
    </div>
    <strong class="font-brand text-xl block mt1 leading-loose"><%= document.name %>
      <% if document.archived? %>
        <span class="font-brand h4 mt1 leading-none" style="color: gray">(Archived)</span>
      <% end %>
    </strong>
    <% unless document.common? %>
      <span class="inline-flex w-100 mt1 items-center muted">
        <%= user_mention document.user %>
        <span class="column text-right">
          <%= document.updated_at.strftime("%b %d, %Y") %>
        </span>
      </span>
    <% end %>
  </li>
<% end %>
