<% if document.file.content_type.in?(["application/vnd.openxmlformats-officedocument.wordprocessingml.document", "application/msword"]) %>
  <div style="height: 400px; overflow: hidden;">
    <iframe loading="lazy" src="<%= document.preview_url %>" width="330" height="450" max-widht="100%" frameborder="0" style="pointer-events: none;"></iframe>
  </div>
<% elsif document.file.content_type == "application/pdf" %>
  <%= image_tag(document.preview_url, width: "330", style: "max-width: 100%;") %>
<% else %>
  <span class="bold h0 absolute" style="opacity: 0.8; color: #8492a6;"><%= document.file.filename.extension %></span>
  <%= image_tag("placeholder-document.svg", width: 300, style: "max-width: 100%; opacity: 0.5;") %>
<% end %>
