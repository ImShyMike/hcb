<% if local_assigns[:hcb_code].pinnable? %>
  <div class="flex muted justify-end items-center">
    <%= inline_icon "pin-fill", size: 24 %>
    <%= link_to pin_hcb_code_path(local_assigns[:hcb_code]), method: :post do %>
      <small class="mt0 mb0">
        <%= local_assigns[:hcb_code].pin.present? ? "Unpin from" : "Pin to" %> <%= local_assigns[:hcb_code].event.name %>
      </small>
    <% end %>
  </div>
<% end %>
