<% admin_tools do %>
  <table>
    <tr>
      <th>HCB CODE</th>
      <th>OBJECT</th>
    </tr>
    <tr>
      <td><%= @hcb_code.hcb_code %></td>

      <% if @hcb_code.ach_transfer? && @hcb_code.ach_transfer.present? %>
        <td><%= link_to "ACH TRANSFER #{@hcb_code.ach_transfer.id}", @hcb_code.ach_transfer %></td>
      <% end %>
    </tr>
  </table>

  <table>
    <tr>
      <th>TYPE</th>
      <th>DATE</th>
      <th>MEMO</th>
      <th>AMOUNT</th>
      <th></th>
    </tr>
    <% @hcb_code.canonical_pending_transactions.each do |ct| %>
      <tr>
        <td>
          PENDING
        </td>
        <td>
          <%= ct.date %>
        </td>
        <td>
          <%= ct.memo %>
        </td>
        <td>
          <%= ct.amount %>
        </td>
        <td>
          <%= link_to "view", "/canonical_pending_transactions/#{ct.id}" %>
        </td>
      </tr>
    <% end %>

    <% @hcb_code.canonical_transactions.each do |ct| %>
      <tr>
        <td>
          SETTLED
        </td>
        <td>
          <%= ct.date %>
        </td>
        <td>
          <%= ct.memo %>
        </td>
        <td>
          <%= ct.amount %>
        </td>
        <td>
          <%= link_to "view", "/transactions/#{ct.id}" %>
        </td>
      </tr>
    <% end %>

  </table>
<% end %>

