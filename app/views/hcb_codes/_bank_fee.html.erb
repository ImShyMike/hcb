<div class="mt4 mb3">
  <article class="card pb0">

    <h2 class="heading h1 mt0 mb0 border-none"><%= @hcb_code.memo %> for <%= number_to_currency(@hcb_code.amount) %></h2>

    <section class="card__banner card__darker details-horiz border-top <%= "border-bottom" if Flipper.enabled?(:transaction_tags_2022_07_29, (@event || @hcb_code.event)) %>">
      <p>
        <strong>Date</strong>
        <%= format_date @hcb_code.date %>
      </p>
      <p>
        <strong>Type</strong>
        Bank fee
      </p>
    </section>

    <% if Flipper.enabled?(:transaction_tags_2022_07_29, (@event || @hcb_code.event)) %>
      <section class='details pt2 pb2'>
        <%= render 'hcb_codes/tags', hcb_code: @hcb_code, event: (@event || @hcb_code.event) %>
      </section>
    <% end %>

    <section class="card__banner secondary border-top">
      <p class="my0 italic">
        Hack Club Bank is charging <strong><%= number_to_percentage(@hcb_code.event.sponsorship_fee * 100, significant: true, strip_insignificant_zeros: true) %></strong> of revenue.
      </p>
    </section>

  </article>
</div>
