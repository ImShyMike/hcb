<div class="mt4 mb3">
  <article class="card pb0">

    <h2 class="heading h1 mt0 mb0 border-none">
      <span>Bank transfer <span class="regular muted">of</span> <%= number_to_currency(@hcb_code.amount) %></span>
    </h2>

    <section class="card__banner card__darker details-horiz border-top">
      <p>
        <strong>Date</strong>
        <%= format_date @hcb_code.date %>
      </p>
      <p>
        <strong>Type</strong>
        Bank transfer
      </p>
    </section>

    <section class="card__banner secondary border-top">
      <p class="my0 italic">
        <%= inline_icon "info", size: 18, class: "align-middle" %>
        <span class="align-middle">This transaction was transferred directly to your account.</span>
      </p>
    </section>

  </article>
  <%= render partial: "hcb_codes/dispute", locals: { hcb_code: @hcb_code } %>
</div>
