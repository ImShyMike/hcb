<% title "Transaction for #{@hcb_code.amount}" %>
<% page_sm %>

<%= render "events/nav" if @event %>

<% @hcb_code.canonical_transactions.each do |ct| %>
  <% if ct.event == @event %>
    <article class="card mt2">
      <%= render partial: "hcb_codes/cards/settled_transaction", locals: { ct: ct } %>
    </article>
  <% end %>
<% end %>

<% @hcb_code.canonical_pending_transactions.each do |pt| %>
  <% if pt.event == @event %>
    <article class="card mt2">
      <%= render partial: "hcb_codes/cards/pending_transaction", locals: { pt: pt } %>
    </article>
  <% end %>
<% end %>

<h2>Receipts</h2>
<%= render "receipts/list_v2" %>
<%= render "receipts/form_v2" %>

<h2>Comments</h2>
<%= render "comments/list_v2" %>
<%= render "comments/form_v2" %>
