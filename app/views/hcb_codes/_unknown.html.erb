<div class="mt4 mb3">
  <article class="card pb0">

    <h2 class="heading h1 mt0 mb0 border-none"><%= @hcb_code.memo %> for <%= number_to_currency(@hcb_code.amount) %></h2>

    <section class="card__banner card__darker details-horiz border-top border-bottom">
      <p>
        <strong>Date</strong>
        <%= format_date @hcb_code.date %>
      </p>
      <p>
        <strong>Type</strong>
        Bank account transaction
      </p>
    </section>

    <section class='details pt2 pb2'>
      <%= render 'hcb_codes/tags', hcb_code: @hcb_code, event: (@event || @hcb_code.event) %>
    </section>

  </article>
  <%= render partial: "hcb_codes/dispute", locals: { hcb_code: @hcb_code } %>
</div>
