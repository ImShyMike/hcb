<div class="mt4 mb3">
  <article class="card pb0">

    <h2 class="heading h2 mt0 mb0 border-none flex items-center">
      <span class="right tooltipped tooltipped--w mr2 align-middle" aria-label="<%= organizer_signed_in? ? 'Rename pending transaction' : 'Sign in to rename transaction' %>">
        <%= pop_icon_to "edit",
                        @hcb_code.ct ? edit_canonical_transaction_path(@hcb_code.ct) : edit_canonical_pending_transaction_path(@hcb_code.pt),
                        disabled: !organizer_signed_in? %>
      </span>
      <span class="align-middle">
        <%= @hcb_code.memo %>
        <span class="regular muted"> for </span>
        <%= number_to_currency(@hcb_code.amount) %>
      </span>
    </h2>

    <section class="card__banner card__darker details-horiz border-top">
      <p>
        <strong>Date</strong>
        <%= format_date @hcb_code.date %>
      </p>
      <p>
        <strong>Type</strong>
        Bank account transaction
      </p>
    </section>

    <% admin_tools do %>
      <section class="details pt2 pb2">
        <p>
          <strong>Original memo</strong>
          <%= @hcb_code.ct.memo %>
        </p>
      </section>
    <% end %>

  </article>
  <%= render partial: "hcb_codes/dispute", locals: { hcb_code: @hcb_code } %>
</div>