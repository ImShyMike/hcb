<%= form_with(model: @report, class: "mb3 mt1", style: "max-width: 600px;", local: true) do |form| %>
  <%= form.label :report_name, "Report Name", class: "bold" %>
  <%= form.text_field :report_name, placeholder: "Chicago Trip Expenses", required: true %>
  <%= form.label :maximum_amount, "Maximum Reimbursable Value (Optional)", class: "mt2 bold" %>
  <div class="field">
    <div class="flex items-center">
      <span class="bold muted" style="width: 1rem;">$</span>
      <%= form.number_field :maximum_amount, placeholder: "500.00", step: 0.01, min: 0.01, required: false, disabled: !(@current_user.admin? || @current_user != @report.user), data: { controller: "truncate-decimal", action: "truncate-decimal#truncate" } %>
    </div>
  </div>
  <%= form.submit "Submit", class: "mt2" %>
<% end %>