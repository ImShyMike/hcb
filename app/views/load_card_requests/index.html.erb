<% title 'Transfer requests' %>
<h1>
  Load Card Requests
</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Event</th>
      <th>Creator</th>
      <th>Load amount</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @load_card_requests.each do |request| %>
      <tr class="<%= 'shade-yellow' if request.under_review? %>">
        <td><%= "##{request.id}" %></td>
        <td><%= link_to request.event.name, request.event %></td>
        <td><%= user_mention request.creator %></td>
        <td><%= render_money request.load_amount %></td>
        <td><%= request.status %></td>
        <td><%= link_to 'Edit', edit_load_card_request_path(request, event_id: request.event.id) %></td>
        <td>
          <% if request.under_review? %>
            <%= link_to 'Process', load_card_request_path(request, event_id: request.event.id), class: 'btn bg-info' %>
          <% else %>
            <%= link_to 'View', load_card_request_path(request, event_id: request.event.id) %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
