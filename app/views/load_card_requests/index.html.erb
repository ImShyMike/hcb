<h1>
  Load Card Requests
</h1>

<table>
  <thead>
    <tr>
      <th>Card</th>
      <th>Creator</th>
      <th>Fulfilled by</th>
      <th>Load amount</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @load_card_requests.each do |request| %>
      <tr class="<%= 'shade-yellow' if request.under_review? %>">
        <td><%= link_to request.card.last_four, request.card %></td>
        <td><%= request.creator.email %></td>
        <td><%= request.fulfilled_by&.email %></td>
        <td><%= render_money request.load_amount %></td>
        <td><%= request.status %></td>
        <% if request.status == 'under review' %>
          <td><%= link_to 'Show', card_load_card_request_path(request, card_id: request.card.id) %></td>
          <td><%= link_to 'Reject', card_load_card_request_reject_path(request, card_id: request.card.id), method: :post, data: { confirm: 'Are you sure?' } %></td>
          <td><%= link_to 'Accept', card_load_card_request_accept_path(request, card_id: request.card.id), method: :post, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
