<p id="notice"><%= notice %></p>

<h1>Load Card Requests</h1>

<table>
  <thead>
    <tr>
      <th>Card</th>
      <th>User</th>
      <th>User</th>
      <th>Fulfilled at</th>
      <th>Load amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @load_card_requests.each do |load_card_request| %>
      <tr>
        <td><%= load_card_request.card %></td>
        <td><%= load_card_request.user %></td>
        <td><%= load_card_request.user %></td>
        <td><%= load_card_request.fulfilled_at %></td>
        <td><%= load_card_request.load_amount %></td>
        <td><%= link_to 'Show', load_card_request %></td>
        <td><%= link_to 'Edit', edit_load_card_request_path(load_card_request) %></td>
        <td><%= link_to 'Destroy', load_card_request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

