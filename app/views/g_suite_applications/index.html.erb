<h1>G Suite Applications</h1>

<table>
  <thead>
    <tr>
      <th>Creator</th>
      <th>Event</th>
      <th>Domain</th>
      <th>Rejected at</th>
      <th>Accepted at</th>
      <th>Canceled at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @g_suite_applications.each do |g_suite_application| %>
      <tr class="<%= 'shade-yellow' if g_suite_application.under_review? %>">
        <td><%= g_suite_application.creator.email %> (#<%= g_suite_application.creator.id %>)</td>
        <td><%= link_to g_suite_application.event.name, g_suite_application.event %></td>
        <td><%= g_suite_application.domain %></td>
        <td><%= g_suite_application.rejected_at %></td>
        <td><%= g_suite_application.accepted_at %></td>
        <td><%= g_suite_application.canceled_at %></td>
        <td><%= link_to 'Show', g_suite_application_path(g_suite_application) %></td>
        <td><%= link_to 'Edit', g_suite_application_path(g_suite_application) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
