<% title "Transaction for #{@transaction.amount}" %>
<% page_sm %>

<%= render 'events/nav' if @event %>

<% unless using_transaction_engine_v2? %>
<% admin_tools('mt3 mb0') do %>
  <%= link_to 'All transactions', transactions_path, class: 'breadcrumb' %>
<% end %>
<% end %>

<article class="card mt2">
  <h1 class="heading h1 mt0 mb0">
    <span class="flex-auto">
      <%= @transaction.fee_payment? ? 'Fee payment' : 'Transaction' %>
    </span>
    <span class="h2 regular">
      <%= @transaction.amount %>
    </span>
  </h1>

  <div class="flex items-center mb2">
    <p class="flex-auto mr1 mb0">
      <strong class="block">Display name</strong>
      <span>
        <%= @transaction.display_name %>
      </span>
    </p>

    <% unless using_transaction_engine_v2? %>
    <%= pop_icon_to 'edit',
      edit_transaction_path(@transaction),
      disabled: !organizer_signed_in?,
      class: 'right tooltipped tooltipped--w', 'aria-label': 'Rename transaction' %>
    <% end %>
  </div>

  <strong>Imported transaction name</strong>
  <pre class="bg-snow mt0"><%= organizer_signed_in? ? @transaction.name : 'REDACTEDâ€“ SIGN IN TO REVEAL' %></pre>

  <section class="details">
    <p>
      <strong>Date</strong>
      <%= format_date @transaction.date.to_date %>
    </p>

    <% if @transaction.invoice_payout&.invoice %>
      <p>
        <strong>For</strong>
        <%= link_to "Invoice of #{render_money @transaction.invoice_payout.invoice.item_amount}", invoice_path(@transaction.invoice_payout.invoice) %>
      </p>
    <% end %>

    <% if @transaction.fee_reimbursement&.invoice %>
    <p>
      <strong>For</strong>
      <span>
      <%= link_to "Refunding fees from an invoice of #{render_money @transaction.fee_reimbursement.invoice.item_amount}", @transaction.fee_reimbursement.invoice %>
      </span>
    </p>
    <% end %>

    <% if @transaction&.disbursement %>
    <p>
      <strong>For</strong>
      <span>
      <%= link_to "A disbursement of #{render_money @transaction.disbursement.amount}", @transaction.disbursement %>
      </span>
    </p>
    <% end %>

    <% if @transaction&.check %>
    <p>
      <strong>For</strong>
      <span>
      <%= link_to "A check of #{render_money @transaction.check.amount}", @transaction.check %>
      </span>
    </p>
    <% end %>

    <% if @transaction&.ach_transfer %>
    <p>
      <strong>For</strong>
      <span>
      <%= link_to "A transfer of #{render_money @transaction.ach_transfer.amount}", @transaction.ach_transfer %>
      </span>
    </p>
    <% end %>

    <% if @transaction&.donation_payout %>
    <p>
      <strong>For</strong>
      <span>
       <%= link_to "A donation of #{render_money @transaction.donation_payout.donation.amount} from #{@transaction.donation_payout.donation.name}", @transaction.donation_payout.donation %>
      </span>
    </p>
    <% end %>

    <% if @transaction.fee_reimbursement&.donation %>
    <p>
      <strong>For</strong>
      <span>
      <%= link_to "Refunding fees from a donation of #{render_money @transaction.fee_reimbursement.donation.amount}", @transaction.fee_reimbursement.donation %>
      </span>
    </p>
    <% end %>

    <% if @transaction.fee_applies? %>
      <% @transaction.fees.each do |fee| %>
        <p>
          <strong>Fee</strong>
          <%= render_money fee.amount_cents_as_decimal %> (<%= render_percentage fee.event_sponsorship_fee %>)

          <%= link_to "waive fee", waive_fee_canonical_transaction_url(@transaction), method: :post, class: "btn bg-accent" if current_user&.admin? %>
        </p>
      <% end %>
    <% elsif @transaction.fee_payment? %>
      <p>
        <strong>Note</strong>
        <strong>This is a fee payment</strong>
      </p>
    <% end %>

    <% if @transaction.emburse_transfer %>
      <p>
        <strong>Transfer Request</strong>
        <%= link_to 'View', emburse_transfer_path(@transaction.emburse_transfer) %>
      </p>
    <% end %>

    <% if @transaction.deprecated_linked_object %>
      <p>
        <strong>History</strong>
        <%= link_to 'Metadata', @transaction.deprecated_linked_object %>
      </p>
    <% end %>

  </section>

  <% unless using_transaction_engine_v2? %>
  <% admin_tools('py0') do %>
      <p>
        Bank Account:
        <%= link_to "##{@transaction.bank_account.id} (#{@transaction.bank_account.name})", @transaction.bank_account %>
      </p>
  <% end %>
  <% end %>

  <% if @transaction&.disbursement %>
    <% admin_tools('py0') do %>
      <%# admin tools because disbursements are not designed
        to be end-user visible %>
      <p>
        This transaction is linked to
        <%= link_to "a #{render_money @transaction.disbursement.amount} disbursement '#{@transaction.disbursement.name}'", @transaction.disbursement %>
      </p>
    <% end %>
  <% end %>

</article>

<% if using_transaction_engine_v2? %>

  <h2>Receipts</h2>
  <section class="grid grid--split mt2 mb3">
    <%= render @transaction.receipts %>
    <%= render 'receipts/upload', receiptable: @transaction %>
  </section>

  <% admin_tools('py0') do %>
    <p>
      <%= link_to "mark bank fee", mark_bank_fee_canonical_transaction_url(@transaction), method: :post, class: "btn bg-accent" %>
    </p>
  <% end %>

  <h2>Comments</h2>
  <%= render 'comments/comments' %>

<% else %>

  <%= render 'comments/comments' %>

<% end %>

