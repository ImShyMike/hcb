<% if t.is_a?(CanonicalTransaction) %>
  <%= render 'transactions/v2', transaction: t %>
<% elsif t.is_a? CanonicalPendingTransaction %>
  <%= render 'transactions/pending_v2', transaction: t %>
<% elsif t.is_a? StripeAuthorization %>
  <%= render t %>
<% elsif t.is_a? EmburseTransaction %>
  <%= render t %>
<% elsif t&.name&.include? 'Hack Club Bank Gift' %>
  <%= render 'transactions/fancy_transaction', transaction: t %>
<% elsif t&.name&.include? 'GitHub Grant' %>
  <%= render 'transactions/github_transaction', transaction: t %>
<% elsif t&.invoice_payout&.invoice %>
  <%= render t&.invoice_payout&.invoice %>
<% elsif t&.donation_payout&.donation %>
  <%= render t&.donation_payout&.donation %>
<% elsif t&.fee_reimbursement %>
  <%= nil %>
  <!-- Fee refunds are rendered in their cooresponding donation/invoice list item -->
<% else %>
  <%= render t %>
<% end %>
