<% page_snow %>
<% page_md %>
<%= render 'events/nav' %>

<h1 class="heading">
  <span class="flex items-center">
    Invoices
    <%= badge_for @invoices.count %>
  </span>
  <%= link_to 'Send an invoice',
    new_event_invoice_path(event_id: @event.id),
    class: 'btn bg-success' %>
</h1>

<% if @invoices.any? %>
  <ul class="grid">
    <% @invoices.each do |i| %>
      <%= link_to i do %>
        <li class="card">
          <strong class="block h2 <%= i.status %>"><%= render_money_short s.invoice_amount %></strong>
          <strong class="block"><%= s.sponsor.name %></strong>
          <%= user_mention d.user %>
        </li>
      <% end %>
    <% end %>
  </ul>
<% else %>
  <%= blankslate 'You havenâ€™t sent any invoices yet.' %>
<% end %>
