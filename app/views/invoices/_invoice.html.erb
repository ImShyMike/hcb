<% transaction = invoice.payout.t_transaction %>
<tr
  class="transaction--<%= transaction.amount.negative? ? 'negative' : 'positive' %>"
  data-behavior="filterbar_row"
  data-filter="<%= transaction.filter_data.to_json %>">
  <td>
    <%= link_to invoice do %>
      <%= transaction.date %>
    <% end %>
  </td>
  <td>
    <%= link_to invoice do %>
      <%= transaction.display_name %>
    <% end %>
  </td>
  <td>
    <%= link_to invoice do %>
      <%= invoice_event_profit invoice %>
    <% end %>
  </td>
  <td>
    <%= link_to 'âžœ', transaction, class: 'center' %>
  </td>
</tr>
<tr><td></td><td>
Sponsor paid:
<span class="right"><%= render_money invoice.item_amount %> via <%= invoice.payout.source_type %></span>
</td><td></td><td></td></tr>
<tr><td></td><td>Payment processor fees (we cover this):
<span class="right">-<%= invoice_payment_processor_fee invoice %></span>
</td><td></td><td></td></tr>
<tr><td></td><td>
<% if invoice_hcb_percent(invoice) %>
  Fiscal sponsorship fee (<%= invoice_hcb_percent invoice %>):
  <span class="right">
    -<%= invoice_hcb_revenue invoice %></span>
<% else %>
  Fiscal sponsorship fee waived:
  <span class="right">$0</span>
<% end %>
</td><td></td><td></td></tr>
<tr><td></td><td>
<% if invoice_hcb_percent(invoice) %>
  Hack Club Bank recieves (after reimbursement):
  <span class="right">
    <%= invoice_hcb_revenue invoice %> - <%= invoice_payment_processor_fee invoice %> = <%= invoice_hcb_profit invoice %></span>
<% else %>
  Hack Club Bank fee waived:
  <span class="right">$0</span>
<% end %>
</td><td></td><td></td></tr>
<tr><td></td><td>Net recieved:
<span class="right"><%= invoice_event_profit invoice %></span>
</td><td></td><td></td></tr>