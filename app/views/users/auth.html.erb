<% title 'Sign in' %>
<% page_xs %>
<% @home_size = 128 %>
<% content_for(:page_class) { 'bg-snow pt4' } %>

<article class="center mt3">
  <h1 class="mt2">
    <span class="h3 caps slate block">Sign in to</span>
    <span class="primary">Hack Club Bank</span>
  </h1>
  <%= form_tag login_code_users_path, 'data-behavior': 'login' do %>
    <%= label_tag :email, 'Enter your emailâ€¦', class: 'left-align' %>
    <%= email_field_tag :email, '', placeholder: 'Email address', autofocus: true, autocomplete: 'username', class: 'left-align mb2' %>
    <div class="flex justify-between">
      <p class="h5"><a href="https://hackclub.com/bank?ref=bank_auth">Get a HCB account</a></p>
      <%= submit_tag 'Get login code' %>
    </div>
  <% end %>
  <p class="h6 mt5">Issues logging into your event? Contact the team at <a href="mailto:bank@hackclub.com">bank@hackclub.com</a>.</p>
</article>
