<% flash.each do |key, value| %>
  <article
    role="alertdialog"
    class="flash flex items-center mt3 mb2 mx-auto shrink-none <%= key %>"
    data-behavior="flash">
    <span class="flex-auto"><%= value %></span>
    <%= inline_icon 'view-close', size: 32, class: 'pointer' %>
  </article>
<% end %>
