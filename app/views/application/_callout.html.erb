<% if defined?(link) %>
  <% if link.start_with?("#") %>
    <%= link_to link do %>
      <div class="callout callout--<%= type %>">
        <span class="callout__emoji"><%= emoji %></span>
        <span><%= sanitize(title, attributes: %w(target)) %></span>
      </div>
    <% end %>
  <% else %>
    <%= link_to link do %>
      <div class="callout callout--<%= type %>">
        <span class="callout__emoji"><%= emoji %></span>
        <%= inline_icon "external", size: 28, class: "callout--external" %>
        <span><%= sanitize(title, attributes: %w(href target)) %></span>
      </div>
    <% end %>
  <% end %>
<% else %>
  <div class="callout callout--<%= type %>">
    <span class="callout__emoji"><%= emoji %></span>
    <span><%= sanitize(title, attributes: %w(href target)) %></span>
  </div>
<% end %>
