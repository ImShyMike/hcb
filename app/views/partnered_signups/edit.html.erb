<% title "Connect to Hack Club Bank" %>
<% page_sm %>
<% @home_size = 128 %>
<% @no_app_shell = true %>
<% content_for(:page_class) { 'bg-snow pt4' } %>

<article class="mt3">
  <div class="center">
    <% if @partner.logo.present? %>
      <%= image_tag @partner.logo, width: 128, style: "vertical-align: middle;" %>
      <span style="font-weight: bold; color: grey; font-size:40px;display:inline-block;vertical-align: middle;">+</span>
    <% end %>
    <%= image_tag "logo.png", width: 128, style: "vertical-align: middle" %>
  </div>

  <h1 class="center mt2">
    <span class="h3 caps secondary block">Connect to</span>
    <span class=""><%= @partner.name || @partner.slug.capitalize %></span>
  </h1>

  <div class="mb3">
    <p>
      <strong><%= @partner.name || @partner.slug.capitalize %></strong> has partnered with Hack Club Bank to
      bring you seamless <%= link_to 'fiscal sponsorship', 'https://en.wikipedia.org/wiki/Fiscal_sponsorship' %> for your organization.
    </p>
  </div>

  <%= render 'form', partnered_signup: @partnered_signup %>

  <div class="center">
    <p class="h5 muted mt5">Need help? <%= help_email %></p>
    <p class="h5 mt2"><a href="https://hackclub.com/bank?ref=bank_auth">Whatâ€™s Bank?</a></p>
  </div>
</article>