<%= render layout: "/public_activity/common", locals: { activity:, url: reimbursement_report_path(activity.trackable) } do %>
  opened <i><%= link_to activity.trackable.name, activity.trackable %></i>
  <% unless activity.trackable.user == activity.owner %>
    for <span class="muted"><%= activity.trackable&.user&.name || "a user" %></span>
  <% end %>
  on <%= link_to activity.trackable.event.name, activity.trackable.event %> for reimbursement
<% end %>
