<%= render layout: "/public_activity/common", locals: { activity:, icon: "welcome", color: "info", hide_owner: true } do %>
  <% if activity.recipient == current_user %>
    <i>You</i>
  <% else %>
    <span class="muted">
      <%= activity.recipient&.name || "A user" %>
    </span>
  <% end %>
  <i>joined HCB!</i>
<% end %>
