<% if items.nil? || items.count == 0 %>
    <%= blankslate "Nothing to see here" %>
<% else %>
    <div class="table-container">
        <table>
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Memo</th>
                    <th>Created by</th>
                    <th>Amount</th>
                </tr>
            </thead>

            <tbody>
                <% items.each do |item| %>
                    <%= render "organizer_positions/spending/controls/spending_item", item: %>
                <% end %>
            </tbody>
        </table>
    </div>
<% end %>
