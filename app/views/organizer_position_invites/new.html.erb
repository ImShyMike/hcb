<%= link_to @invite.event.name, @invite.event, class: 'breadcrumb' %>
<h1>Invite Another Member</h1>

<p>This person will have full access to your event finances.</p>

<%= form_with(model: @invite, local: true, url: event_organizer_position_invites_path) do |form| %>
  <% if @invite.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@invite.errors.count, "error") %> prohibited this invite from being saved:</h2>

      <ul>
      <% @invite.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :email %>
