<% title "You’ve been invited to #{@invite.event.name}" %>
<main class="center max-width-3 mx-auto">
<h1>You’ve been invited to <%= @invite.event.name %>.</h1>

<div class="flex justify-center items-center mt3">
  <%= link_to 'Accept invitation', organizer_position_invite_accept_path(@invite), method: :post, class: 'btn bg-success h2 mr1' %>
  <%= link_to 'Reject', organizer_position_invite_reject_path(@invite), method: :post, class: 'btn bg-error ml1' %>
</div>
</main>
