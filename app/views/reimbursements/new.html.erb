<% page_sm %>
<%= render 'events/nav' if organizer_signed_in? %>

<h1>Get reimbursed by <%= @event.name %></h1>

<%= form_with model: Reimbursement.new, url: event_reimbursements_path(@event) do |form| %>
    <div class="field">
        <%= form.label :name, "Name" %>
        <%= form.text_field :name, required: true, value: current_user.full_name, disabled: true %>
    </div>
    <div class="field">
        <%= form.label :email, "Email" %>
        <%= form.text_field :email, required: true, value: current_user.email, disabled: true %>
    </div>

    <hr>

    <div class="field">
        <%= form.label :reimbursement_for, "For" %>
        <%= form.text_field :reimbursement_for, placeholder: "idk pizza or something", required: true %>
    </div>

    <div class="field">
        <%= form.label :amount_cents, 'Amount' %>
        <div class="flex items-center">
            <span class="bold muted" style="width: 1rem;">$</span>
            <%= form.number_field :amount_cents,
                placeholder: '500.00',
                step: 0.01,
                min: 0.01,
                required: true %>
        </div>
    </div>

    <div class="field">
        <%= form.label :receipt %>
        <%= form.file_field :receipt,
                            multiple: true,
                            required: true,
                            accept: "image/*,.pdf"
                        %>
    </div>

    <div class="field">
        <button class="btn" type="button">Link your bank account</button>
    </div>

    <%= form.submit "Submit" %>
<% end %>
