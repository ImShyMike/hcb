<%= form_with(model: donation, local: true, url: make_donation_donations_path) do |form| %>
  <%= form_errors donation %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, required: true %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.email_field :email, required: true %>
  </div>


  <%= form.label :amount %>
  <div class="field">
    <div class="flex items-center">
      <span class="bold muted" style="width: 1rem;">$</span>
      <%= form.number_field :amount, value: (donation.amount.nil? ? nil : (donation.amount.to_f / 100)), placeholder: '500.00', step: 0.01, required: true %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
