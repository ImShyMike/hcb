<tr
  class="transaction--<%= stripe_authorization.amount.positive? ? 'positive' : 'negative' %><%= ' muted italic' if stripe_authorization.pending? %>"
  data-behavior="filterbar_row"
  data-filter="<%= stripe_authorization.filter_data.to_json %>">
  <td class="transaction__icon tooltipped tooltipped--e" aria-label="Card transaction">
    <%= inline_icon 'card' %>
  </td>
  <td>
    <%= stripe_authorization.created_at.to_date %>
  </td>
  <td class="flex justify-between">
    <span><%= stripe_authorization.name %></span>
  </td>
  <td></td>
  <td class="nowrap">
    <%= render_money stripe_authorization.amount %>
  </td>
  <td>
    <%= link_to 'Details', stripe_authorization if organizer_signed_in? %>
  </td>
</tr>
  
