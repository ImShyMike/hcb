<%= form_with(model: card_request, local: true) do |form| %>
  <% if card_request.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(card_request.errors.count, "error") %> prohibited this card_request from being saved:</h2>

      <ul>
      <% card_request.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% if admin_signed_in? %>
    <div class="field">
      <%= form.label :event_id %>
      <%= form.collection_select(:event_id, Event.all, :id, :name, prompt: 'Select eventâ€¦') %>
    </div>
  <% else %>
    <%= form.hidden_field :event_id, value: params[:event_id] %>
  <% end %>

  <% if admin_signed_in? %>
    <div class="field">
      <%= form.label :notes, 'Notes (admin-only)' %>
      <%= form.text_area :notes %>
    </div>
  <% end %>

  <% if admin_signed_in? %>
    <div class="field">
      <%= form.label :email %>
      <%= form.text_field :email %>
    </div>
  <% else %>
    <%= form.hidden_field :email, value: current_user.email %>
  <% end %>

  <div class="field">
    <%= form.label :full_name, 'Full name (as will appear on card)' %>
    <%= form.text_field :full_name, value: current_user.full_name %>
  </div>

  <div class="field">
    <%= form.label :shipping_address %>
    <%= form.text_area :shipping_address %>
  </div>

  <div class="field">
    <%= form.label :daily_limit, 'Daily spending limit (optional, in USD)' %>
    <%= form.number_field :daily_limit %>
  </div>

  <div class="actions">
    <%= form.submit 'Send this card' %>
  </div>
<% end %>
