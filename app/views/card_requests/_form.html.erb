<%= form_with(model: card_request, local: true) do |form| %>
  <%= form_errors card_request %>

  <% admin_tools('mb2') do %>
    <div class="field">
      <%= form.label :event_id %>
      <%= form.collection_select(:event_id, Event.all, :id, :name, prompt: 'Select eventâ€¦') %>
    </div>

    <div class="field">
      <%= form.label :notes, 'Notes (admin-only)' %>
      <%= form.text_area :notes, 'data-behavior': 'autosize' %>
    </div>

    <div class="field">
      <%= form.label :email %>
      <%= form.email_field :email %>
    </div>
  <% end %>

  <% unless admin_signed_in? %>
    <%= form.hidden_field :event_id, value: params[:event_id] %>
    <%= form.hidden_field :email, value: current_user.email %>
  <% end %>

  <div class="field">
    <%= form.label :full_name, 'Full name (as will appear on card)' %>
    <%= form.text_field :full_name, value: card_request.full_name || current_user.full_name %>
  </div>

  <div class="field">
    <%= form.label :shipping_address, 'Shipping address (with city, state, + zip code)' %>
    <%= form.text_area :shipping_address, placeholder: "1600 Pennsylvania Ave NW\nWashington, DC 20500" %>
  </div>

  <div class="actions">
    <%= form.submit 'Send this card' %>
  </div>
<% end %>
