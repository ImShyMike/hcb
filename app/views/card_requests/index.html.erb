<p id="notice"><%= notice %></p>

<h1>Card Requests</h1>

<table>
  <thead>
    <tr>
      <th>Creator</th>
      <th>Event</th>
      <th>Daily limit</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @card_requests.each do |card_request| %>
      <tr>
        <td><%= card_request.creator %></td>
        <td><%= card_request.event %></td>
        <td><%= card_request.daily_limit %></td>
        <td><%= link_to 'Show', card_request %></td>
        <td><%= link_to 'Edit', edit_card_request_path(card_request) %></td>
        <td><%= link_to 'Destroy', card_request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% if admin_signed_in? %>
          <td><%= link_to 'Accept', card_request_accept_path(card_request), method: :post %></td>
          <td><%= link_to 'Reject', card_request_reject_path(card_request), method: :post %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
