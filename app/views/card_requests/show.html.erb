<% page_sm %>
<%= render 'events/nav' %>

<h1 class="heading">
  <%= @card_request.full_name %>â€™s card request
  <%= link_to 'Edit', edit_card_request_path(@card_request), class: 'btn bg-info' %>
</h1>

<section class="details">
<p>
  <strong>Status</strong>
  <%= @card_request.status %>
</p>

<p>
  <strong>Name on card</strong>
  <%= @card_request.full_name %>
</p>
</section>

<% if admin_signed_in? %>
  <p>
    <%= link_to 'Reject request', card_request_reject_path(@card_request), method: :post, class: 'btn bg-error' %>
  </p>
  <p>
    <%= link_to 'Accept request', new_card_path(card_request_id: @card_request), class: 'btn bg-success' %>
  </p>
<% else %>
  <p>
    <%= link_to 'Cancel request', card_request_path(@card_request), method: :delete, class: 'btn btn--destroy' %>
  </p>
<% end %>

<h2>Comments</h2>
<%= render 'comments/form' %>
<%= render 'comments/comments' %>
