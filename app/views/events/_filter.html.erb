<% filter_applied = @user || @type || @start_date || @end_date || @minimum_amount || @maximum_amount %>

<div class="filterbar flex flex-row justify-between items-center width-100" style="gap: 16px">
  <%= form_with(model: nil, local: true, method: :get, class: "flex-auto md-mr2") do |form| %>
    <%= form.text_field :q, placeholder: "Search", style: "width auto; max-width: none;", value: params[:q] %>
    <% if @tag %>
      <%= form.hidden_field :tag, value: @tag.label %>
    <% end %>
  <% end %>
  <% admin_tool(@show_running_balance ? "" : "display-none") do %>
    <div data-controller="menu" data-menu-append-to-value="turbo-frame#ledger" data-menu-placement-value="bottom-end">
      <button
        type="button"
        class="btn btn-small bg-info menu__toggle menu__toggle--arrowless overflow-visible z-10"
        data-menu-target="toggle" data-action="menu#toggle click@document->menu#close keydown@document->menu#keydown">
        <%= inline_icon "list", size: 16, style: "margin: 0" %>
        <span class="xs-hide sm-hide md-hide nowrap">Count</span>
      </button>
      <div class="menu__content menu__content--2 menu__content--compact h5" data-menu-target="content">
        <% [10, 25, 50, 100, 200].each do |amount| %>
          <div class="flex items-center">
            <%= link_to({ per: amount, q: params[:q] }.compact, class: "flex-auto menu__action") do %>
              <%= amount %> Transactions Per Page
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
  <div data-controller="menu" data-menu-append-to-value="turbo-frame#ledger" data-menu-placement-value="bottom-end">
    <button
      type="button"
      class="btn btn-small bg-info menu__toggle menu__toggle--arrowless overflow-visible z-10"
      data-menu-target="toggle" data-action="menu#toggle click@document->menu#close keydown@document->menu#keydown">
      <%= inline_icon "filter", size: 16 %>
      <% if @tag %>
        <span class="xs-hide sm-hide md-hide flex items-center">
          <span class="nowrap">Filtered by</span>
          <span style="background-color: rgba(0, 0, 0, 0.3); color: #f9fafc" class="nowrap badge regular ml1"><%= @tag.label %></span>
        </span>
      <% elsif @user %>
        <span class="xs-hide sm-hide md-hide flex items-center">
          <span class="nowrap">Filtered by</span>
          <span style="background-color: rgba(0, 0, 0, 0.3); color: #f9fafc" class="nowrap badge regular ml1">
            <div class="avatar-grow line-height-0 mr1">
              <%= avatar_for @user, 18 %>
            </div>
            <%= @user.name %>
          </span>
        </span>
      <% elsif @type %>
      <span class="xs-hide sm-hide md-hide flex items-center">
        <span class="nowrap">Filtered by</span>
        <span style="background-color: rgba(0, 0, 0, 0.3); color: #f9fafc" class="nowrap badge regular ml1">
          <%= @type.humanize.titleize.gsub("Ach", "ACH") %>
        </span>
      </span>
      <% elsif @start_date || @end_date %>
        <span class="xs-hide sm-hide md-hide flex items-center">
          <span class="nowrap">
            <%= @start_date && @end_date ? "Between" : @end_date ? "Before" : "After" %>
          </span>
          <span style="background-color: rgba(0, 0, 0, 0.3); color: #f9fafc" class="nowrap badge regular ml1">
            <%= @start_date&.to_datetime&.strftime("%m/%d/%Y") || "" %>
            <%= @end_date && @start_date ? " and " : "" %>
            <%= @end_date&.to_datetime&.strftime("%m/%d/%Y") || "" %>
          </span>
        </span>
      <% elsif @minimum_amount || @maximum_amount %>
        <span class="xs-hide sm-hide md-hide flex items-center">
          <span class="nowrap">
            <%= @minimum_amount && @maximum_amount ? "Between" : @maximum_amount ? "Less than" : "More than" %>
          </span>
          <span style="background-color: rgba(0, 0, 0, 0.3); color: #f9fafc" class="nowrap badge regular ml1">
            <%= render_money @minimum_amount if @minimum_amount %>
            <%= @minimum_amount && @maximum_amount ? " and " : "" %>
            <%= render_money @maximum_amount if @maximum_amount %>
          </span>
        </span>
      <% else %>
        <span class="xs-hide sm-hide md-hide nowrap">Filter</span>
      <% end %>
    </button>
    <div class="menu__content menu__content--2 menu__content--compact h5" data-menu-target="content" data-controller="filter">
      <div style="display: flex; gap: 12px;padding: 0.25rem 0.5rem !important;">
        <% if Flipper.enabled?(:transaction_tags_2022_07_29, @event) && @event.tags.size > 0 %>
          <span
            data-filter-target="tagsLabel"
            data-filter-menu-label-selected="<%= @tag || !filter_applied ? "true" : "false" %>"
            data-action="click->filter#selectTags"
            style="cursor: pointer;">
            Tag
          </span>
        <% end %>
        <span
          data-filter-target="usersLabel"
          data-filter-menu-label-selected="<%= (@user || !(Flipper.enabled?(:transaction_tags_2022_07_29, @event) && @event.tags.size > 0)) && !filter_applied ? "true" : "false" %>"
          data-action="click->filter#selectUsers"
          style="cursor: pointer;">
          User
        </span>
        <span
          data-filter-target="typesLabel"
          data-filter-menu-label-selected="<%= @type ? "true" : "false" %>"
          data-action="click->filter#selectTypes"
          style="cursor: pointer;">
          Type
        </span>
        <span
          data-filter-target="datesLabel"
          data-filter-menu-label-selected="<%= @start_date || @end_date ? "true" : "false" %>"
          data-action="click->filter#selectDates"
          style="cursor: pointer;">
          Date
        </span>
        <span
          data-filter-target="amountsLabel"
          data-filter-menu-label-selected="<%= @minimum_amount || @maximum_amount ? "true" : "false" %>"
          data-action="click->filter#selectAmounts"
          style="cursor: pointer;">
          Amount
        </span>
      </div>

      <div class="menu__divider"></div>

      <% if Flipper.enabled?(:transaction_tags_2022_07_29, @event) && @event.tags.size > 0 %>
        <div data-filter-target="tags" data-filter-menu-selected="<%= @tag || !filter_applied ? "true" : "false" %>">
          <% @event.tags.each do |tag| %>
            <div class="flex items-center" data-tag="<%= tag.id %>">
              <%= link_to tag.label, { tag: tag.label, q: params[:q] }.compact, class: "flex-auto menu__action" %>
              <% if organizer_signed_in? %>
                <%= button_to event_tag_path(@event, tag), class: "menu__action", method: :delete, title: "Delete this tag", form: { "data-turbo" => "true", "data-turbo-confirm" => tag.removal_confirmation_message } do %>
                  <%= inline_icon "delete", size: 20, style: "margin: 0" %>
                <% end %>
              <% end %>
            </div>
          <% end %>
        </div>
      <% end %>

      <div data-filter-target="users" data-filter-menu-selected="<%= (@user || !(Flipper.enabled?(:transaction_tags_2022_07_29, @event) && @event.tags.size > 0)) && !filter_applied ? "true" : "false" %>">
        <% @organizers.each do |position| %>
          <div class="flex items-center">
              <%= link_to({ user: position.user.id, q: params[:q] }.compact, class: "flex-auto flex items-center menu__action") do %>
                <div class="avatar-grow line-height-0 mr1">
                  <%= avatar_for position.user, 18 %>
                </div>
                <%= position.user.name %>
              <% end %>
          </div>
        <% end %>
      </div>

      <div data-filter-target="types" data-filter-menu-selected="<%= @type ? "true" : "false" %>">
        <% ["ach_transfer", "mailed_check", "account_transfer", "card_charge", "check_deposit", "donation", "invoice", "refund", "fiscal_sponsorship_fee", "reimbursement"].each do |type| %>
          <div class="flex items-center">
              <%= link_to({ type:, q: params[:q] }.compact, class: "flex-auto menu__action") do %>
                <%= type.humanize.titleize.gsub("Ach", "ACH") %>
              <% end %>
          </div>
        <% end %>
      </div>

      <div data-filter-target="dates" data-filter-menu-selected="<%= @start_date || @end_date ? "true" : "false" %>">
        <%= form_with(model: nil, local: true, method: :get, class: "flex-auto p1") do |form| %>
          <p class="bold mb0 mt0">Transactions after...</p>
          <%= form.date_field :start, class: "border mb1", value: @start_date %>
          <p class="bold mb0 mt0">Transactions before...</p>
          <%= form.date_field :end, class: "border mb1", value: @end_date %>
          <div class="flex justify-start">
            <%= form.submit "Filter Transactions" %>
          </div>
        <% end %>
      </div>

      <div data-filter-target="amounts" data-filter-menu-selected="<%= @minimum_amount || @maximum_amount ? "true" : "false" %>">
        <%= form_with(model: nil, local: true, method: :get, class: "flex-auto p1") do |form| %>

          <p class="bold mb0 mt0">Transactions more than...</p>
          <div class="flex mb1">
            <span class="bold muted flex self-end items-center justify-center" style="width: 1rem; height: 48px;">$</span>
            <%= form.number_field :minimum_amount, placeholder: "50.00", value: @minimum_amount, step: 0.01, data: { controller: "truncate-decimal", action: "truncate-decimal#truncate", "expense-form-target": "field" } %>
          </div>

          <p class="bold mb0 mt0">Transactions less than...</p>
          <div class="flex mb1">
            <span class="bold muted flex self-end items-center justify-center" style="width: 1rem; height: 48px;">$</span>
            <%= form.number_field :maximum_amount, placeholder: "500.00", value: @maximum_amount, step: 0.01, data: { controller: "truncate-decimal", action: "truncate-decimal#truncate", "expense-form-target": "field" } %>
          </div>

          <div class="flex justify-start">
            <%= form.submit "Filter Transactions" %>
          </div>
        <% end %>
      </div>

      <% if @tag || @user || @type || @start_date || @end_date %>
        <div class="menu__divider"></div>
        <%= link_to do %>
          <%= inline_icon "view-close", size: 24 %>
          Clear filters
        <% end %>
      <% end %>
    </div>
  </div>
</div>
