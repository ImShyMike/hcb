<% content_for(:nav) do %>
  <%= link_to @event, class: "text-decoration-none pt2" do %>
    <h1 class="border-none h1 mt0 mb0 primary break-word">
      <%= @event.name %>
    </h1>
  <% end %>
  <div>
    <% admin_tools("m0 p0 badge mb2", "span") do %>
      <span class="m0 badge bg-muted pointer" onClick="navigator.clipboard.writeText(<%= @event.name.to_json %>);">
        copy event name
      </span>
    <% end %>
  </div>
  <nav class="dock dock--desktop mt2">
      <%= dock_item "Home",
        event_path(id: @event.slug),
        tooltip: "View your transactions",
        icon: "home",
        selected: local_assigns[:selected] == :transactions if @event.navbar.include?(:transactions) %>
      <h4 class="mb0 h5 muted">Receive</h4>
      <hr>
      <%= dock_item "Donations",
        event_donation_overview_path(event_id: @event.slug),
        tooltip: "Receive donations online",
        icon: "support",
        data: { tour_step: "donations" },
        selected: local_assigns[:selected] == :donations if @event.navbar.include?(:donations) %>
      <%= dock_item "Invoices",
        event_invoices_path(event_id: @event.slug),
        tooltip: "Collect sponsor payments",
        icon: "briefcase",
        selected: local_assigns[:selected] == :invoices if @event.navbar.include?(:donations) %>
      <%= dock_item "Account & routing number",
        account_number_event_path(@event),
        tooltip: "Receive payouts from GoFundMe, Shopify, Venmo, and more",
        icon: "bank-account",
        selected: local_assigns[:selected] == :account_number if @event.navbar.include?(:account_number) %>
      <%= dock_item "Check deposit",
        event_check_deposits_path(@event),
        tooltip: "Deposit checks",
        disabled: !organizer_signed_in?,
        icon: "cheque",
        selected: local_assigns[:selected] == :deposit_check if @event.navbar.include?(:deposit_check) %>
      <h4 class="mb0 h5 muted">Spend</h4>
      <hr>
      <%= dock_item "Cards",
        event_cards_overview_path(event_id: @event.slug),
        tooltip: "Manage team debit cards",
        icon: "card",
        data: { tour_step: "cards" },
        selected: local_assigns[:selected] == :cards if @event.navbar.include?(:cards) %>
      <%= dock_item "Transfers",
        event_transfers_path(event_id: @event.slug),
        tooltip: "Send & transfer money",
        icon: "transactions",
        selected: local_assigns[:selected] == :transfers if @event.navbar.include?(:cards) %>
      <%= dock_item "Grants",
        event_grants_path(@event),
        tooltip: "Send & manage grants",
        icon: "idea",
        selected: local_assigns[:selected] == :grants if @event.navbar.include?(:grants) %>
      <hr>
      <%= dock_item "Team",
        event_team_path(event_id: @event.slug),
        tooltip: "Manage your team",
        icon: "leader",
        selected: local_assigns[:selected] == :team if @event.navbar.include?(:team) %>
      <%= dock_item "Perks",
        event_promotions_path(event_id: @event.slug),
        tooltip: "Receive promos & discounts",
        icon: "shirt",
        data: { tour_step: "perks" },
        selected: local_assigns[:selected] == :promotions if @event.navbar.include?(:promotions) %>
      <%= dock_item "Google #{content_tag(:span, 'Workspace', class: 'sm-hide md-hide')}",
        event_g_suite_overview_path(event_id: @event.slug),
        tooltip: @event.g_suites.exists? ? "Manage domain Google Workspace" : Flipper.enabled?(:google_workspace, @event) ? "Set up domain Google Workspace" : "Register for Google Workspace Waitlist",
        icon: "google",
        disabled: @event.demo_mode? || !organizer_signed_in?,
        selected: local_assigns[:selected] == :google_workspace if @event.navbar.include?(:google_workspace) %>
      <%= dock_item "Documentation",
        event_documentation_path(event_id: @event.slug),
        tooltip: "Commonly asked questions and how-tos",
        icon: "info",
        selected: local_assigns[:selected] == :documentation if @event.navbar.include?(:documentation) %>
      <%= dock_item "Settings",
        edit_event_path(@event),
        tooltip: "Edit organization settings",
        icon: "project-settings",
        disabled: !organizer_signed_in?,
        selected: local_assigns[:selected] == :settings if @event.navbar.include?(:settings) %>
  </nav>
  <nav class="dock dock--mobile">
    <% if @event.outernet_guild? %>
      <%= dock_item "Home",
        event_path(id: @event.slug),
        icon: "home" %>
      <%= dock_item "Cards",
        event_cards_overview_path(@event),
        icon: "card",
        data: { tour_step: "spend" } %>
    <% else %>
      <%= dock_item "Home",
        event_path(id: @event.slug),
        icon: "home",
        selected: local_assigns[:selected] == :transactions if @event.navbar.include?(:transactions) %>
      <button class="dock__item <%= "dock__item--selected" if local_assigns[:selected].in? [:donations, :invoices, :account_number, :deposit_check] %> bg-transparent border-none menu__toggle" data-behavior="menu_toggle" data-tour-step="receive">
        <div class="line-height-0 relative"><%= inline_icon "support", size: 32, class: "primary" %></div>
        <span class="line-height-3">Receive</span>
        <div class="menu__content" data-behavior="menu_content">
          <h4 class="mb0 h5 muted left-align pl1 mt1">Receive</h4>
          <div class="menu__divider"></div>
          <%= link_to "Donations", event_donation_overview_path(@event) if @event.navbar.include?(:donations) %>
          <%= link_to "Invoices", event_invoices_path(@event) if @event.navbar.include?(:invoices) %>
          <%= link_to "Account & routing number", account_number_event_path(@event) if @event.navbar.include?(:account_number) %>
          <%= link_to "Deposit a check", event_check_deposits_path(@event) if @event.navbar.include?(:deposit_check) %>
        </div>
      </button>
      <button class="dock__item <%= "dock__item--selected" if local_assigns[:selected].in? [:cards, :transfers] %> bg-transparent border-none menu__toggle" data-behavior="menu_toggle" data-tour-step="spend">
        <div class="line-height-0 relative"><%= inline_icon "card", size: 32, class: "primary" %></div>
        <span class="line-height-3">Spend</span>

        <div class="menu__content" data-behavior="menu_content">
          <h4 class="mb0 h5 muted left-align pl1 mt1">Spend</h4>
          <div class="menu__divider"></div>
          <%= link_to "Cards", event_cards_overview_path(@event) if @event.navbar.include?(:cards) %>
          <%= link_to "Transfers", event_transfers_path(@event) if @event.navbar.include?(:transfers) %>
        </div>
      </button>
      <div class="dock__overflow">
        <action type="button" class="pop primary menu__toggle" data-behavior="menu_toggle" aria-expanded="false" tabindex="0">
          <%= inline_icon "more" %>
          <div class="menu__content" data-behavior="menu_content">
            <%= link_to "Promotions & perks", event_promotions_path(event_id: @event.slug) if @event.navbar.include?(:promotions) %>
            <%= link_to "Google Workspace", event_g_suite_overview_path(event_id: @event.slug) if @event.navbar.include?(:google_workspace) %>
            <%= link_to "Documentation", event_documentation_path(event_id: @event.slug) if @event.navbar.include?(:documentation) %>
            <%= link_to "Settings", edit_event_path(@event) if @event.navbar.include?(:settings) %>
          </div>
        </action>
      </div>
    <% end %>
  </nav>
<% end %>
<% content_for(:container) do %>
<% end %>

<%# 2022 April Fools :p %>
<% if params[:jank].present? || DateTime.now <= Time.new(2022, 4, 2, 9, 30, 00, "-04:00") %>
  <% if organizer_signed_in? and @event.custom_css_url.present? %>
    <%= stylesheet_link_tag "https://scrapbook.hackclub.com/api/css?url=#{@event.custom_css_url}" %>
  <% end %>
<% end %>

