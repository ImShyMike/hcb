<div data-controller="menu" class="inline-flex items-center" data-menu-append-to-value="turbo-frame#ledger" data-menu-placement-value="bottom-start">
  <button
    type="button"
    class="pop my-2 cursor-pointer tooltipped tooltipped--s"
    aria-label="Add filters..."
    data-menu-target="toggle" data-action="menu#toggle click@document->menu#close keydown@document->menu#keydown">
    <%= inline_icon "filter", size: 28 %>
  </button>
  <div class="menu__content menu__content--2 menu__content--compact h5" style="width: 290px; padding: 0.5rem" data-menu-target="content">
    <div data-controller="tabs" data-tabs-default-tab-value="type">
      <button id="type" data-tabs-target="btn" data-action="tabs#select">Type</button>
      <button id="status" data-tabs-target="btn" data-action="tabs#select">Status</button>
      <button id="date" data-tabs-target="btn" data-action="tabs#select">Date</button>
      <button id="amount" data-tabs-target="btn" data-action="tabs#select">Amount</button>

      <div class="menu__divider"></div>

      <div data-tabs-target="tab" id="type">
        <%= link_to "ACH transfer", upsert_query_params(type: "ach_transfer"), class: "menu__action !border-none" %>
        <%= link_to "Mailed check", upsert_query_params(type: "mailed_check"), class: "menu__action !border-none" %>
        <%= link_to "PayPal", upsert_query_params(type: "paypal"), class: "menu__action !border-none" %>
        <%= link_to "HCB transfer", upsert_query_params(type: "hcb_transfer"), class: "menu__action !border-none" %>
        <%= link_to "Grant", upsert_query_params(type: "grant"), class: "menu__action !border-none" if Flipper.enabled?(:card_grants_2023_05_25, @event) %>
        <%= link_to "International Wire", upsert_query_params(type: "international_wire"), class: "menu__action !border-none" if Flipper.enabled?(:international_wires_2024_09_22, @event) %>
      </div>

      <div data-tabs-target="tab" id="status">
        <%= link_to "Fulfilled", upsert_query_params(status: "fulfilled"), class: "menu__action !border-none" %>
        <%= link_to "Deposited", upsert_query_params(status: "deposited"), class: "menu__action !border-none" %>
        <%= link_to "In transit", upsert_query_params(status: "transit"), class: "menu__action !border-none" %>
        <%= link_to "Canceled", upsert_query_params(status: "canceled"), class: "menu__action !border-none" %>
      </div>

      <div data-tabs-target="tab" id="date">
        <%= form_with(model: nil, local: true, method: :get, class: "flex-auto p1") do |form| %>
          <p class="bold mb0 mt0">Transfers after...</p>
          <%= form.date_field :start, class: "border mb1", value: @start_date %>
          <p class="bold mb0 mt0">Transfers before...</p>
          <%= form.date_field :end, class: "border mb1", value: @end_date %>
          <% request.query_parameters.except(:start, :end).each do |key, value| %>
            <%= hidden_field_tag key, value %>
          <% end %>
          <%= form.submit "Filter transfers" %>
        <% end %>
      </div>

      <div data-tabs-target="tab" id="amount">
        <%= form_with(model: nil, local: true, method: :get, class: "flex-auto p1") do |form| %>
          <p class="bold mb0 mt0">Amount greater than...</p>
          <%= form.number_field :start, class: "border mb1", value: @start_date %>
          <p class="bold mb0 mt0">Amount less than...</p>
          <%= form.number_field :end, class: "border mb1", value: @end_date %>
          <% request.query_parameters.except(:start, :end).each do |key, value| %>
            <%= hidden_field_tag key, value %>
          <% end %>
          <%= form.submit "Filter transfers" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
