<%= form_with(model: event, local: true, class: 'mb3') do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.size, "error") %> prohibited your account info from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :address %>
    <%= form.text_area :address %>
  </div>

  <div class="field">
    <%= form.label :slug, 'URL' %>    
    <div class="flex items-center">
      <span class="slate">bank.hackclub.com/</span>
      <%= form.text_field :slug, placeholder: event.name.parameterize %>
    </div>
         <p class="flex items-center warning line-height-3 mb3">
      <%= inline_icon 'important', size: 32, class: 'mr1' %> This will break all bookmarks you may have & also force anyone who is currently using your event on Bank to restart whatever they were doing from the homepage. Proceed carefully!
    </p>
  </div>

  <% admin_tools do %>
    <div class="field">
      <%= form.label :name %>
      <%= form.text_area :name %>
    </div>

    <div class="field">
      <%= form.label :start %>
      <%= form.date_select :start %>
    </div>

    <div class="field">
      <%= form.label :end %>
      <%= form.date_select :end %>
    </div>

    <div class="field">
      <%= form.label :sponsorship_fee, "Sponsorship fee (%)" %>
      <%= form.text_field :sponsorship_fee, placeholder: '0.07' %>
    </div>

    <div class="field">
      <%= form.label :expected_budget, 'Expected budget' %>
      <div class="flex items-center">
        <span class="bold muted" style="width: 1rem;">$</span>
        <%= form.number_field :expected_budget, value: number_with_precision(BigDecimal.new(event.expected_budget || 0) / 100, precision: 2), step: '0.01' %>
      </div>
    </div>

    <div class="field">
      <%= form.label :emburse_department_id %>
      <%= form.text_field :emburse_department_id %>
    </div>

    <div class="field">
      <%= form.label :point_of_contact_id %>
      <%= form.collection_select :point_of_contact_id, User.admin.all, :id, :email %>
    </div>
  <% end %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
