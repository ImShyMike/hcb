<%= render 'nav' %>

<% admin_tools "mt3" do %>
  <h1>Activate this organization</h1>

  <%= form_with model: @event do |form| %>
    <%= form.hidden_field :demo_mode, value: false %>

    <div class="field">
      <%= form.label :point_of_contact_id, "Point of contact" %>
      <%= form.collection_select :point_of_contact_id, User.admin.all, :id, :email, selected: current_user.id, required: true %>
    </div>

    <div class="field">
      <%= form.label :sponsorship_fee, "Sponsorship fee (as fraction of revenue)" %>
      <%= form.text_field :sponsorship_fee, placeholder: "0.07" %>
    </div>

    <div class="field">
      <%= form.label :category %>
      <%= form.collection_select :category, Event.categories, :first, :first, { include_blank: 'Select a category'} %>
    </div>

    <div class="field">
      <%= form.label :country %>
      <%= form.collection_select :country, Event.countries.map{|c| [c.first, get_country_name_from_alpha2(c.first)]}, :first, :last, { include_blank: 'Select a country'} %>
    </div>

    <div class="field field--checkbox">
      <%= form.check_box :organized_by_hack_clubbers %>
      <%= form.label :organized_by_hack_clubbers, "Organized by Hack Clubbers?" %>
    </div>

    <%= form.submit "Activate" %>
  <% end %>
<% end %>
