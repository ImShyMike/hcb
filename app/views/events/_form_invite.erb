<p class="muted mb1">This person will have full access to your project finances.</p>

<%= form_with(model: invite, local: true, url: event_organizer_position_invites_path) do |form| %>
  <%= form_errors invite %>

  <div class="field">
    <%= form.label :email, class: "mb1" %>

    <div class="flex items-center">
      <%= form.email_field :email, class: "mr2" %>
      <% if Flipper.enabled?(:user_permissions, @event) %>
        <%= form.select :role, OrganizerPosition.roles.keys.map { |role| [role.humanize, role] }, {}, class: "w-auto pr3 mr2" %>
      <% end %>
      <%= form.submit 'Send', disabled: !organizer_signed_in?, style: "flex-shrink: 0" %>
    </div>
    <% admin_tools('mt1') do %>
      <div class="field field--checkbox mb0">
        <%= form.check_box :is_signee %>
        <%= form.label :is_signee, "Signed contract" %>
      </div>
    <% end %>
  </div>
<% end %>
