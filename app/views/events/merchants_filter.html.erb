<%= turbo_frame_tag :merchants_filter do %>
  <% @merchants.each do |merchant| %>
    <div class="flex items-center">
      <%= link_to(merchant[:name], upsert_query_params_from_url(params[:url], merchant: merchant[:id]), class: "flex-auto menu__action #{"menu__action--active" if @merchant == merchant[:id]}", data: { turbo_prefetch: "false" }) %>
    </div>
  <% end %>
  <% if @merchants.empty? %>
    <p class="p-1 text-center">No merchants found</p>
  <% end %>
<% end %>
