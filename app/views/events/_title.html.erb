<header data-controller="menu">
  <%= link_to @event, class: "#{"pointer-events-none" unless signed_in?} text-decoration-none gap-2 h2 font-bold text-inherit line-height-2 text-balance event-title -m-2 my-2 px-2 rounded-lg transition-colors flex items-center tracking-tight hover:text-primary", data: ({ action: "click->menu#toggle click@document->menu#close keydown@document->menu#keydown", menu_target: "toggle" } if show_org_switcher?) do %>
    <%= @event.name %>
    <%= inline_icon "down-caret", size: 28, class: "fill-muted event-title-dropdown-icon" if show_org_switcher? %>
  <% end %>
  <% if show_org_switcher? %>
    <div class="menu__content menu__content--switcher sm:w-[275px]" data-menu-target="content">
      <p class="muted font-bold text-sm mb-0 m-1">Organizations</p>
      <% current_user.events.not_hidden.excluding(@event).with_attached_logo.map do |event| %>
        <%= link_to event, title: event.name, class: "gap-2" do %>
          <% if event.logo.attached? %>
            <%= image_tag event.logo, height: 24, width: 24, class: "rounded" %>
          <% else %>
            <div style="height: 24px; width: 24px;" class="bg-neutral-500/30 rounded shrink-none"></div>
          <% end %>
          <span class="truncate"><%= event.name %></span>
        <% end %>
      <% end %>
    </div>
  <% end %>
</header>
