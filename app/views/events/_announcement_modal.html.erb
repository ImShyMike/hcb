<section class="modal modal--scroll bg-snow" data-behavior="modal" role="dialog" id="create_announcement">
  <%= turbo_frame_tag :create_announcement do %>
    <%= modal_header "Create new announcement" %>

    <%= render "events/transfers/unauthorized_callout", locals: { action: "create announcements" } unless policy(@event).create_announcement? %>

    <%= render "announcement_form" %>
  <% end %>
</section>
