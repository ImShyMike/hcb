<% title "Cards for #{@event.name.html_safe}" %>
<% page_md %>
<%= render 'nav'%>

<div class="card border b--warning pb0 mt3 mb3">
  <div class="mt1 mb2 center">
    <em class="h3">The booming voice: OH, IT'S NOT A PROBLEM AT ALL</em><br/>
    you feel relief wash over you as your breath in<br/>
    the anxiety flows out as you exhale<br/>
    you wonder silently: <em>where am i?</em><br/>
    <em class="h3">YOU'LL FIND US AGAIN ONCE WE'RE READY FOR YOU</em><br/>
    you ponder your next steps: <em>what do i do now?</em><br/>
    <em class="h3">ALL YOU HAVE TO DO IS WAKE UP...</em><br/>
    suddenly you realize what you have to do.<br/>
  </div>
  <div class="border-top card__banner card__darker secondary center">
    <%= link_to 'WAKE UP', event_emburse_cards_overview_path(@event), class: 'h1 bold' %>
  </div>
</div>
<h1 class="heading">
  Cards
  <% if organizer_signed_in? %>
    <% if current_user.stripe_cardholder %>
      <%= link_to new_stripe_card_path(event_id: @event.id), class: 'btn btn--icon bg-success' do %>
        <%= inline_icon 'card-add' %>
        Issue new card
      <% end %>
    <% else %>
      <%= link_to event_stripe_cardholder_new_path, class: 'btn btn--icon bg-success' do %>
        <%= inline_icon 'card-add' %>
        Issue new card
      <% end %>
    <% end %>
  <% end %>
</h1>
<% if @cards.any? %>
  <section class="mixed-grid grid--spacious mt2">
    <%= render @cards.select(&:active?) %>
  </section>
  <% if @emburse_cards.deactivated.size > 0 %>
    <details class="w-100 left-align">
      <summary><h3 class="inline-block pb0 border-none">Deactivated cards</h3></summary>
      <section class="mixed-grid grid--spacious mt2">
      <%= render @emburse_cards.deactivated %>
      </section>
    </details>
  <% end %>
<% elsif @cards.blank? %>
  <%= blankslate 'You havenâ€™t requested any cards yet.' %>
<% end %>
