<h1><%= @account.name %></h1>
<pre>
<%= JSON.pretty_generate(JSON.parse(@account.to_json)) %>
</pre>
<table>
<tr>
  <th>Date</th>
  <th>Type</th>
  <th>Name</th>
  <th>Amount</th>
  <th>Event</th>
  <th>Full Info</th>
</tr>
<% @account.transactions.each do |t| %>
  <tr>
    <td>
      <%= t.date %>
    </td>
    <td>
      <%= t.transaction_type %>
    </td>
    <td>
      <%= t.name %>
    </td>
    <td>
      <%= render_money t.amount %>
    </td>
    <td>
      <% if t.event %>
        <%= link_to t.event.name, t.event %>
      <% else %>
        <%= link_to 'Set Event', edit_transaction_path(t) %>
      <% end %>
    </td>
    <td>
      <%= link_to 'Click', t %>
    </td>
  </tr>
<% end %>
</table>
