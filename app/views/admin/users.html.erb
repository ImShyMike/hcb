<% title "USERS" %>

<h1>USERS</h1>

<%= paginate @users %>

<%= form_with local: true, url: users_admin_index_path, method: :get do |form| %>
  <%= form.text_field :q, value: params[:q], placeholder: 'Search' %>

  <%= form.collection_select(:event_id, Event.reorder(Event::CUSTOM_SORT), :id, :admin_dropdown_description, { include_blank: true, selected: @event_id }, { width: 150, style: "max-width: 150px" }) %>
  |

  <%= form.submit "Search" %>
<% end %>

<%= page_entries_info @users, entry_name: 'users' %>

<table>
  <thead>
    <tr>
      <th class="w-16">ID</th>
      <th class="w-32">Created</th>
      <th>Name</th>
      <th>Email</th>
      <th>Events</th>
      <th class="w-32">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr style="<%= "background: #ff8c38;" if user.admin_at.present? %>">
        <td><%= user.id %></td>
        <td><%= user.created_at.strftime("%Y-%m-%d") %></td>
        <td>
          <%= link_to edit_user_path(user) do %>
            <%= user.name %>
          <% end %>
        </td>
        <td><%= user.email %></td>
        <td>
          <% user.events.each do |e| %>
            <%= link_to e.id, e %>
          <% end %>
        </td>
        <td>
          <%= link_to 'Impersonate', impersonate_users_path(user_id: user.id), data: { confirm: "Are you sure?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @users %>
