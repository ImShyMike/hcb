<% title "ACH" %>

<h1>ACH</h1>

<%= paginate @ach_transfers %>

<%= form_with local: true, url: ach_admin_index_path, method: :get do |form| %>
  <%= form.text_field :q, value: params[:q] %>
  <%= form.label :pending do %>
    <%= form.check_box :pending, checked: @pending %>
    Pending
  <% end %>
  |

  <%= form.collection_select(:event_id, Event.reorder(Event::CUSTOM_SORT), :id, :admin_dropdown_description, { include_blank: true, selected: @event_id }, { width: 150, style: "max-width: 150px" }) %>
  |

  <%= form.submit "Search" %>
<% end %>


<p><small><%= pluralize(@count, "result") %></small></p>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Date</th>
      <th>Recipient</th>
      <th>Amount</th>
      <th>Status</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @ach_transfers.each do |ach| %>
      <tr style="<%= "background: #ffffcc;" if ach.pending? %> <%= "background: #ccffff;" if ach.in_transit? %>">
        <td><%= ach.id %></td>
        <td><%= ach.created_at.strftime("%Y-%m-%d") %></td>
        <td>
          <%= link_to ach_transfer_path(ach) do %>
            <%= ach.event.name.upcase %>: <%= ach.recipient_name.upcase %>
          <% end %>
        </td>
        <td><%= render_money_amount(ach.amount) %></td>
        <td><%= ach.aasm_state.upcase %></td>
        <td>
          <%= link_to "Process", ach_start_approval_admin_path(ach) if ach.pending? %>
          <%= link_to "View", ach_start_approval_admin_path(ach) unless ach.pending? %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @ach_transfers %>
