<% title "Reimbursements" %>

<h1>Reimbursements</h1>

<%= paginate @reports %>

<%= form_with local: true, url: reimbursements_admin_index_path, method: :get do |form| %>
  <%= form.text_field :q, value: params[:q], placeholder: "Search" %>
  <%= form.label :pending do %>
    <%= form.check_box :pending, checked: @pending %>
    Reimbursement Requested (Awaiting Review)
  <% end %>
  |

  <%= form.collection_select(:event_id, Event.reorder(Event::CUSTOM_SORT), :id, :admin_dropdown_description, { include_blank: true, selected: @event_id }, { width: 150, style: "max-width: 150px" }) %>
  |

  <%= form.submit "Search" %>
<% end %>

<%= page_entries_info @reports, entry_name: "transfers" %>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Date</th>
      <th>Organization</th>
      <th>Title</th>
      <th>User</th>
      <th>Amount</th>
      <th>Status</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @reports.each do |report| %>
      <tr class="<%= "admin-bg-pending" if report.reimbursement_requested? %>">
        <td><%= report.id %></td>
        <td><%= report.created_at.strftime("%Y-%m-%d") %></td>
        <td>
          <%= link_to event_path(report.event) do %>
            <%= report.event.name.upcase %>
          <% end %>
        </td>
        <td>
          <%= link_to reimbursement_report_path(report) do %>
            <%= report.name %>
          <% end %>
        </td>
        <td>
          <%= report.user.name %> (<%= report.user.id %>)
        </td>
        <td><%= render_money(report.amount) %></td>
        <td><%= report.aasm_state.titleize %></td>
        <td>
          <%= link_to "View", reimbursement_report_path(report) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @reports %>
