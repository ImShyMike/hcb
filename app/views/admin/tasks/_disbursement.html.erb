<%# locals: (task:) -%>
<div class="task__header">
    <%= inline_icon "door-leave", size: 24, class: "task__icon" %>
    <h3>
        <strong>Disbursement</strong>
        form
        <strong><%= task.source_event.name %></strong>
        to
        <strong><%= task.destination_event.name %></strong>
        for
        <strong><%= render_money(task.amount) %></strong>

    </h3>
    <div class="flex-grow"></div>
    <%= inline_icon "down-caret", size: 24, class: "task__icon" %>
</div>

<div class="task__body">
    <div class="flex flex-row justify-space-between items-center gap-6">
        <div class="flex flex-col items-center w-full gap-1">
            Source
            <%= render partial: "admin/tasks/event", locals: { event: task.source_event } %>
        </div>
        <div class="flex flex-col items-center gap-2">
            <span class="whitespace-nowrap"><%= render_money(task.amount) %></span>
            <%= image_tag asset_path("link-arrow.svg"), width: 100, height: 50, style: "object-fit: contain; width: 3rem; max-width: 3rem; margin: 0px;" %>
        </div>
        <div class="flex flex-col items-center w-full gap-1">
            Destination
            <%= render partial: "admin/tasks/event", locals: { event: task.destination_event } %>
        </div>
    </div>

        



    <div class="h-9"></div>

    <div class="flex flex-row items-center gap-3">
    <h4 class="font-normal flex flex-row items-center m-0 p-0">Requested by <%= user_mention(task.requested_by, { class: "mx-2", avatar: { class: "m-0" } }) %> on <%= task.created_at.strftime("%B %d") %></h4>
        <div class="flex-grow"></div>

        <button class="bg-snow border border-smoke black hover:!bg-smoke"><span>Open</span> <kbd>⇧</kbd><kbd>o</kbd></button>
        <button class="bg-snow border border-smoke black hover:!bg-smoke"><span>Reject</span> <kbd>⇧</kbd><kbd>r</kbd></button>
        <button class=""><span>Process</span> <kbd>⇧</kbd><kbd>p</kbd></button>
    </div>

</div>