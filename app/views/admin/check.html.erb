<% title "CHECK" %>

<h1>CHECK</h1>

<%= paginate @checks %>

<%= form_with local: true, url: check_admin_index_path, method: :get do |form| %>
  <%= form.text_field :q, value: params[:q], placeholder: "Search" %>
  <%= form.label :in_transit do %>
    <%= form.check_box :in_transit, checked: @in_transit %>
    In Transit
  <% end %>
  |

  <%= form.collection_select(:event_id, Event.reorder(Event::CUSTOM_SORT), :id, :admin_dropdown_description, { include_blank: true, selected: @event_id }, { width: 150, style: "max-width: 150px" }) %>
  |

  <%= form.submit "Search" %>
<% end %>

<%= page_entries_info @checks, entry_name: "checks" %>

<table>
  <thead>
    <tr>
      <th class="w-24">ID</th>
      <th class="w-32">Date</th>
      <th>Event</th>
      <th>Recipient</th>
      <th>Check Number</th>
      <th class="w-32">Amount</th>
      <th>Status</th>
      <th class="w-24">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @checks.each do |check| %>
      <tr class="<%= "admin-bg-pending" if check.in_transit? %> <%= "admin-bg-transit" if check.in_transit_and_processed? %>">
        <td><%= check.id %></td>
        <td><%= check.created_at.strftime("%Y-%m-%d") %></td>
        <td><%= check.event.name.upcase %></td>
        <td><%= check.recipient_name %></td>
        <td>
          <%= link_to check_path(check) do %>
            <%= check.check_number || "-----" %>
          <% end %>
        </td>
        <td><%= render_money_amount(check.amount) %></td>
        <td><%= check.aasm_state.upcase %></td>
        <td>
          <%= link_to "Process", check_process_admin_path(check) if check.in_transit? %>
          <%= link_to "View", check_process_admin_path(check) unless check.in_transit? %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @checks %>
