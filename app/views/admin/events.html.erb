<% title "EVENTS" %>

<h1>EVENTS <small><%= link_to "New Event", event_new_admin_index_path %></small></h1>

<%= paginate @events %>

<%= form_with local: true, url: events_admin_index_path, method: :get do |form| %>
  <%= form.text_field :q, value: params[:q] %>
  <%= form.label :pending do %>
    <%= form.check_box :pending, checked: @pending %>
    Pending
  <% end %>
  |
  <%= form.label :transparent do %>
    <%= form.check_box :transparent, checked: @transparent %>
    Transparent
  <% end %>
  |
  <%= form.label :omitted do %>
    <%= form.check_box :omitted, checked: @omitted %>
    Omitted
  <% end %>
  |
  <%= form.label :hidden do %>
    <%= form.check_box :hidden, checked: @hidden %>
    Hidden
  <% end %>
  |

  <%= form.submit "Search" %>
<% end %>


<p><small><%= pluralize(@count, "result") %></small></p>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Date</th>
      <th>Name</th>
      <th>Fee</th>
      <th>Status</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |event| %>
      <tr style="<%= "background: #ffffcc;" if event.pending? %> <%= "background: #ff8c38;" if event.omit_stats? %>">
        <td><%= event.id %></td>
        <td><%= event.created_at.strftime("%Y-%m-%d") %></td>
        <td>
          <%= link_to event_path(event) do %>
            <%= event.name.upcase %>
          <% end %>
        </td>
        <td>
          <%= render_percentage event.sponsorship_fee %>
        </td>
        <td>
          <%= "🏦" if event.omit_stats? %>
          <%= "📈" if event.is_public? %>
          <%= "🕵️‍♂️" if event.hidden_at %>
        </td>
        <td>
          <%= link_to "Process", event_process_admin_path(event) if event.pending? %>
          <%= link_to "View", event_process_admin_path(event) unless event.pending? %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @events %>
