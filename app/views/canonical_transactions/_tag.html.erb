<div tabindex="0" class="badge tx-tag m0 shrink-none group min-w-6 items-center tag-<%= tag.color || "muted" %> h-6" id="<%= tag_dom_id(hcb_code, tag) %>" data-tag="<%= tag.id %>" title="<%= tag.label %>">
  <span class="flex items-center">
    <%= tag.emoji %>
    <span class="!max-w-0 group-hover:!max-w-xs group-focus:!max-w-xs transition-all duration-500 !flex items-center overflow-hidden">
      &nbsp;<%= tag.label %>
      <% if (local_assigns[:streamed] || organizer_signed_in?) %>
        <%= button_to toggle_tag_hcb_code_path(id: hcb_code.hashid, tag_id: tag.id), class: "p0 line-height-0 bg-transparent cursor-pointer border-none link-reset inline", form_class: "line-height-0", form: { "data-turbo" => "true" } do %>
          <%= inline_icon "view-close", size: 16 %>
        <% end %>
      <% end %>
    </span>
  </span>
</div>
