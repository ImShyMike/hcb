<div class="badge tx-tag m0 shrink-none group <%= "flex" unless local_assigns[:compact] %> relative min-w-6 items-center tag-<%= tag.color || "muted" %> h-6" id="<%= tag_dom_id(hcb_code, tag) %>" data-tag="<%= tag.id %>" title="<%= tag.label if local_assigns[:compact] %>" >
  <span class="<%= "group-hover:invisible" if local_assigns[:compact] %>"><%= "#{tag.emoji} #{tag.label unless local_assigns[:compact]}" %></span>
  <% if (local_assigns[:streamed] || organizer_signed_in?) %>
    <%= button_to toggle_tag_hcb_code_path(id: hcb_code.hashid, tag_id: tag.id), class: "p0 line-height-0 bg-transparent border-none cursor-pointer link-reset #{"w-full h-full flex justify-center items-center absolute top-0 left-0 z-10 invisible group-hover:visible" if local_assigns[:compact]}", form_class: "line-height-0", form: { "data-turbo" => "true" } do %>
      <%= inline_icon "view-close", size: 16 %>
    <% end %>
  <% end %>
</div>
