<div class="comments">
<% @comments.each do |comment| %>
  <% next if comment.admin_only && !admin_signed_in? %>
  <div class="my2">
    <div class="comment__name">
      <%= user_mention @invoice.creator %>
      <span class="h5 muted"><%= time_ago_in_words @invoice.created_at %> ago</span>
    </div>
    <div class="card">
      <%= auto_link comment.content %>
      <% if comment.file.attached? %>
        <%= link_to 'ðŸ“Ž', url_for(comment.file), target: '_blank' %>
      <% end %>
    </div>
  </div>
<% end %>
</div>
