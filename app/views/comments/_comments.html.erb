<div class="comments">
<% @comments.each do |comment| %>
  <div class="comment">
    <div class="comment__name">
      <strong><%= comment.user.name %></strong>
      <span class="ml1"><%= time_ago_in_words comment.created_at %> ago</span>
    </div>
    <div class="comment__bubble"><%= comment.content %></div>
  </div>
<% end %>
</div>
