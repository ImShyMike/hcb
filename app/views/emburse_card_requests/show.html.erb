<% page_sm %>
<%= render 'events/nav' %>

<h1 class="heading">
  <%= @emburse_card_request.full_name %>â€™s card request
  <%= link_to 'Edit', edit_emburse_card_request_path(@emburse_card_request), class: 'btn bg-info' %>
</h1>

<section class="details">
<p>
  <strong>Status</strong>
  <%= @emburse_card_request.status %>
</p>

<p>
  <strong>Name on card</strong>
  <%= @emburse_card_request.full_name %>
</p>
</section>

<% if admin_signed_in? %>
  <p>
    <%= link_to 'Reject request', emburse_card_request_reject_path(@emburse_card_request), method: :post, class: 'btn bg-error' %>
  </p>
<% else %>
  <p>
    <%= link_to 'Cancel request', emburse_card_request_path(@emburse_card_request), method: :delete, class: 'btn btn--destroy' %>
  </p>
<% end %>

