<% unless @subscriptions.empty? %>
  <h2>Subscriptions</h2>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Status</th>
        <th>Amount</th>
        <th>Every</th>
      </tr>
    </thead>
    <tbody>
      <% @subscriptions.each do |subscription| %>
        <tr>
          <td><%= subscription.merchant %></td>
          <td><%= subscription.card %></td>
          <td><%= number_to_currency(subscription.last_hcb_code.amount) %></td>
          <td><%= subscription.average_date_difference %> days</td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
