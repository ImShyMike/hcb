<% title 'Emburse cards' %>

<h1>
  Emburse cards
</h1>

<%= paginate @emburse_cards %>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Project</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @emburse_cards.each do |card| %>
      <tr>
        <td><%= user_mention card.user %></td>
        <td><%= card.event.name %></td>
        <td><%= link_to 'Show', card %></td>
        <td><%= link_to 'Edit', edit_emburse_card_path(card) %></td>
        <td><%= link_to 'Destroy', card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
