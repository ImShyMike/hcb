<div>
  <% if @card_grant.stripe_card.present? %>
    <%= render local_assigns[:card_grant].stripe_card, headless: true, show_card_number: true %>
  <% end %>

  <div class="stat mt3 mx-auto <%= "muted" if local_assigns[:card_grant].balance == 0 %>" style="width: fit-content">
    <span class="stat__label">Balance remaining</span>
    <span class="stat__value"><%= local_assigns[:card_grant].balance.format(symbol: false) %></span>
  </div>
</div>
