<turbo-frame id="edit_balance_<%= @card_grant.id %>" autoscroll data-autoscroll-behavior="smooth">

<%= form_with(url: topup_event_card_grant_path(id: @card_grant.hashid, event_id: @event.slug), class: "flex flex-row justify-start items-center gap-3") do |form| %>
<%= link_to edit_balance_event_card_grant_path(@card_grant),
                    data: { turbo: true },
                    class: "btn bg-muted !w-max",
                    disabled: !policy(@card_grant).topup? do %>
            <%= inline_icon "view-close", size: 20, class: "!m-0" %>
        <% end %>
  <%= form.number_field :amount, placeholder: "500.00", required: true, step: 0.01, min: 0, data: { controller: "truncate-decimal", action: "truncate-decimal#truncate blur->truncate-decimal#pad" } %>
<%= form.submit("Add funds", data: { turbo: true, turbo_frame: "_top" }) %>
    <% end %>
</turbo-frame>
