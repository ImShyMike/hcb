<!DOCTYPE html>
<html data-dark="<%= !!@dark %>">
  <head>
    <title>
      <%= "#{yield(:title)} â€“ " if content_for?(:title) %>
      Bank
    </title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="format-detection" content="telephone=no">
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#e42d42">
    <meta name="msapplication-TileColor" content="#e42d42">
    <meta name="theme-color" content="#e42d42">
    <%= yield(:head) if content_for?(:head) %>
  </head>
  <body class="bg-snow <%= content_for :page_class %>">
    <% unless @hide_home %>
      <header class="home flex items-center justify-center pt1 md-pt2">
        <div class="header-left flex items-center justify-end">
          <% if signed_in? %>
            <action role="button" data-behavior="toggle_theme" class="muted pointer no-select tooltipped tooltipped--s" aria-label="Toggle dark mode" tabindex="0">
              <%= inline_icon 'moon', size: home_action_size %>
              <%= inline_icon 'moon-fill', size: home_action_size, style: 'display: none;' %>
            </action>
          <% end %>
          <% if @event and not @event.partner_logo_url.blank? %>
            <div class="partner-logo ml2">
              <%= image_tag @event.partner_logo_url, name: 'partner-logo', height: home_action_size, alt: 'Partner logo', style: 'box-sizing: border-box; padding: 5px;' %>
            </div>
          <% end %>
        </div>

        <div class="header-center flex items-center justify-start">
          <%= link_to root_path, class: 'pl2 pr2' do %>
            <%= image_tag 'logo.svg', name: 'header-logo', width: @home_size || 48, height: @home_size || 48, alt: 'Bank logo' %>
            <%= image_tag 'hank.png', name: 'alternative-logo', style: 'display: none;', width: @home_size || 48, height: @home_size || 48, alt: 'Hank logo' %>
          <% end %>
        </div>

        <div class="header-right flex items-center justify-left">
          <%= link_to logout_users_path, method: :delete,
              class: 'muted tooltipped tooltipped--s',
              'aria-label': 'Sign out' do %>
              <%= inline_icon 'door-leave', size: home_action_size %>
          <% end if signed_in? %>
        </div>
      </header>
    <% end %>
    <main class="container <%= content_for :container_class %>">
      <% flash.each do |key, value| %>
        <article role="alertdialog" class="flash flex items-center mt3 mb2 mx-auto <%= key %>" data-behavior="flash">
          <span class="flex-auto"><%= value %></span>
          <%= inline_icon 'view-close', size: 32, class: 'pointer' %>
        </article>
      <% end %>
      <%= yield %>
      <%= render 'footer' %>
    </main>

    <script type="text/javascript">
      !function(){var analytics=window.analytics=window.analytics||[];if(!analytics.initialize)if(analytics.invoked)window.console&&console.error&&console.error("Segment snippet included twice.");else{analytics.invoked=!0;analytics.methods=["trackSubmit","trackClick","trackLink","trackForm","pageview","identify","reset","group","track","ready","alias","debug","page","once","off","on"];analytics.factory=function(t){return function(){var e=Array.prototype.slice.call(arguments);e.unshift(t);analytics.push(e);return analytics}};for(var t=0;t<analytics.methods.length;t++){var e=analytics.methods[t];analytics[e]=analytics.factory(e)}analytics.load=function(t,e){var n=document.createElement("script");n.type="text/javascript";n.async=!0;n.src="https://cdn.segment.com/analytics.js/v1/"+t+"/analytics.min.js";var a=document.getElementsByTagName("script")[0];a.parentNode.insertBefore(n,a);analytics._loadOptions=e};analytics.SNIPPET_VERSION="4.1.0";
      analytics.load("PLllQA4nQNDjojqZ0MKP9GePJs1UlWgm");
      analytics.page();

      <% if signed_in? %>
        <%# Identifying the user by their API ID because analytics are shared on subdomains %>
        analytics.identify(<%= current_user.api_id %>, {
          email: '<%= current_user.email %>',
          name: '<%= current_user.full_name %>',
          phone: '<%= current_user.phone_number %>'
        });
      <% end %>
      }}();
    </script>
  </body>
</html>
