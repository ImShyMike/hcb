<% title "Brand Guidelines" %>

<% content_for :head do %>
  <% img = "https://workshop-cards.hackclub.com/Brand%20Guidelines.png?theme=light&fontSize=250px&brand=Bank" %>
  <meta name="twitter:card" content="summary_large_image">
  <meta property="og:image" content="<%= img %>">
  <meta name="twitter:image" content="<%= img %>">
  <meta property="og:site_name" content="Hack Club Bank">
  <meta property="og:url" content="https://bank.hackclub.com">
  <meta property="og:title" content="Brand Guidelines">
  <meta name="twitter:title" content="Hack Club Bank">
  <% description = "How and when to refer to Hack Club Bank." %>
  <meta property="og:description" content="<%= description %>">
  <meta name="twitter:description" content="<%= description %>">
  <meta name="description" content="<%= description %>">
<% end %>

<div class="container container--md card py3 md-p3 lg-p4 mt2 mt3 md-mt4 overflow-visible">
  <h1 class="mt2 md-mt0">
    Brand Guidelines
    <span class="muted h3 regular sans block">
      How and where to refer to Hack Club Bank
    </span>
  </h1>

  <p>
  If you'd like to list us on your site, you can use the logos below. Please
  don't list us under a "sponsor" or "donor" list unless we've directly
  transferred funds to your account before.
  </p>

  <h2>
    Logos
  </h2>

  <div class="grid grid--wide grid--spacious mt3 mb3 md-mb4">
    <% @icons.each do |icon| %>
      <div class="card w-100 pb0">
        <div class="card__banner card__banner--top center bg-<%= icon[:background] %>" aria-label="<%= icon[:criteria] %>" style="transform-style: preserve-3d;" data-behavior="hover_tilt" data-tilt-scale="1.2">
          <img src="/brand/hcb-icon-<%= icon[:name].parameterize %>.png" width="100" style="transform: translateZ(20px); cursor: pointer;" class="logo-confetti">
        </div>
        <h3 class="mb0"><%= icon[:name] %></h3>
        <p class="mt0 muted"><%= icon[:criteria] %></p>
        <div class="card__banner card__banner--bottom card__darker mb0">
          <%= link_to "SVG", "/brand/hcb-icon-#{icon[:name].parameterize}.svg", class: "btn bg-info mr2 w-auto", target: :_blank, download: "" %>
          <%= link_to "PNG", "/brand/hcb-icon-#{icon[:name].parameterize}.png", class: "btn bg-accent", target: :_blank, download: "" %>
        </div>
      </div>
    <% end %>
  </div>

  <h2>
    Badges
    <span class="muted h3 regular sans block">
      For placing in a footer or details section.
    </span>
  </h2>

  <div class="grid grid--wide grid--spacious mt3 mb3 md-mb4">
    <% @logos.each do |logo| %>
      <div class="card w-100 pb0">
        <div class="card__banner card__banner--top center bg-<%= logo[:background] %>" aria-label="<%= logo[:criteria] %>" style="transform-style: preserve-3d;" data-behavior="hover_tilt" data-tilt-scale="1.2">
          <img src="/brand/hcb-logo-<%= logo[:name].parameterize %>.svg" style="transform: translateZ(20px); cursor: pointer;" class="logo-confetti">
        </div>
        <h3 class="mb0"><%= logo[:name] %></h3>
        <p class="mt0 muted"><%= logo[:criteria] %></p>
        <div class="card__banner card__banner--bottom card__darker mb0">
          <%= link_to "SVG", "/brand/hcb-logo-#{logo[:name].parameterize}.svg", class: "btn bg-info mr2 w-auto", target: :_blank, download: "" %>
          <%= link_to "PNG", "/brand/hcb-logo-#{logo[:name].parameterize}.png", class: "btn bg-accent", target: :_blank, download: "" %>
        </div>
      </div>
    <% end %>
  </div>

  <h2>
    Affiliation/EIN
    <span class="muted h4 regular sans block mt1">
      You’ll want to mention this publicly for donors and sponsors.
    </span>
  </h2>

  <pre>
  <%= @event_name %> is fiscally sponsored by Hack Club Bank, a project by The Hack
  Foundation (d.b.a. Hack Club), a 501(c)(3) nonprofit (EIN: 81-2908499).</pre>
  <p>
  You can find a great example at the very bottom of <%= link_to "Hack Pennsylvania's homepage", "https://hackpenn.com/" %>.
  It's not required, but it seems like everyone is putting it
  <%= link_to "in", "https://windyhacks.com/" %>
  <%= link_to "their", "https://mahacks.com/" %>
  <%= link_to "website's", "https://teenhacksli.com/" %>
  <%= link_to "footer", "https://www.hackthefog.com/" %>.
  </p>
</div>

<script src="/brand/js-confetti.browser.js"></script>
<script>
    document.addEventListener("turbo:load", () => {
      const jsConfetti = new JSConfetti()

      const combinations = [
        {
          emojis: ['🦄'],
          confettiNumber: 1,
        },
        {
          emojis: ['💸', '💵', '💰'],
        },
        {
          emojis: ['🏦', '🏧'],
        },
        {
          emojis: ['🌈', '⚡️', '💥', '✨', '💫', '💸', '💵', '💰', '💲', '🪙', '🏦', '💴'],
        }
      ]

      $('.logo-confetti').click(() => {
        jsConfetti.addConfetti(combinations[Math.floor(Math.random() * combinations.length)])
      })
    })
</script>
