  </ul>
  <% unless OpsCheckin.is_cooldown_active? %>
    <%= link_to 'Record all tasks as done',
      ops_checkins_path,
      size: 24,
      method: :post,
      class: 'info tooltipped tooltipped--w',
      'aria-label': 'Record a checkin' %>
  <% end %>
<% end %>