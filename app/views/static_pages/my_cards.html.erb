<% title 'My cards' %>
<% page_md %>
<%= render 'users/nav' %>

<h1>Cards</h1>

<%= async_frame_to my_cards_shipping_path %>

<% if @stripe_cards.any? %>
  <article class="grid grid--wide">
    <%= render @stripe_cards, headless: true %>
  </article>
<% else %>
  <%= blankslate "No cards found!" %>
<% end %>

<%= async_frame_to my_missing_receipts_list_path %>

<% if @emburse_cards.any? %>
  <details class="mt3">
    <summary><h2 class="inline-block mt0">Emburse cards</h2></summary>
    <article class="grid">
      <%= render @emburse_cards, headless: true %>
    </article>
  </details>
<% end %>
