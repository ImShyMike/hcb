<main class="flex flex-column mx-auto center items-center max-width-4 pt3">
  <% if admin_signed_in? %>
    <h1>Grand Central Station of <span class="primary">Bank</span></h1>
    <ul class="list left-align w-100">
      <li class="ultrawhite">
        Bank Account
        <ul class="list">
          <li><%= link_to 'Setup Bank', new_bank_account_path %></li>
          <li><%= link_to 'See Transactions', BankAccount.instance %></li>
        </ul>
      </li>
      <li><%= link_to 'Events', events_path %></li>
      <li><%= link_to 'Sponsors', sponsors_path %></li>
      <li class="ultrawhite">
        G Suite
        <ul class="list">
          <li><%= link_to 'G Suite Applications', g_suite_applications_path %></li>
          <li><%= link_to 'G Suites', g_suites_path %></li>
          <li><%= link_to 'G Suite Accounts', g_suite_accounts_path %></li>
        </ul>
      </li>
      <li><%= link_to 'Login', auth_users_path %>
        <ul class="list">
          <li><%= link_to 'Logout', logout_users_path, method: :delete %></li>
        </ul>
      </li>
    </ul>
  <% else %>
    <h1>Welcome to <span class="primary">Hack Club Bank</span>.</h1>
    <% if signed_in? %>
      <% if current_user.events.any? %>
        <ul class="list left-align w-100">
          <% current_user.events.each do |event| %>
            <%= link_to event do %>
              <li>
                <strong><%= event.name %></strong>
              </li>
            <% end %>
          <% end %>
        </ul>
      <% else %>
        <p class="slate h3 bold">No events found.</p>
      <% end %>
      <% if current_user.organizer_position_invites.pending.any? %>
        <h2 class="h4 w-100 left-align mt3 mb0 ttu slate">Your pending invitations</h2>
        <ul class="list left-align w-100">
          <% current_user.organizer_position_invites.pending.each do |invite| %>
            <%= link_to invite do %>
              <li>
                <strong><%= invite.event.name %></strong>
              </li>
            <% end %>
          <% end %>
        </ul>
        <% end %>
      <%= link_to 'Sign out', logout_users_path, method: :delete, class: 'btn mt2' %>
    <% else %>
      <%= link_to 'Sign in', auth_users_path, class: 'btn h2' %>
    <% end %>
  <% end %>
</main>
