<ul class="list-reset comments w-100 my-0 py-2 activity overflow-scroll">
  <turbo-frame id="activities-<%= @activities.current_page %>" target="_top">
    <%= render_activities(@activities.reject { |activity| activity.trackable.nil? }) %>
    <% if @activities.next_page %>
      <%= turbo_frame_tag(
            "activities-#{@activities.next_page}",
            loading: :lazy,
            src: "/my/activities?page=#{@activities.next_page}",
            target: "_top"
          ) do %>
        <i class="muted">Loading more activities...</i>
      <% end %>
    <% end %>
  </turbo-frame>
</ul>
