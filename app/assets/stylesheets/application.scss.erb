@import 'variables';

@font-face {
  font-family: 'Phantom Sans';
  src: url('https://hackclub.com/fonts/Phantom_Sans_0.4/Regular.woff')
      format('woff'),
    url('https://hackclub.com/fonts/Phantom_Sans_0.4/Regular.woff2')
      format('woff2');
  font-weight: normal;
  font-style: normal;
  font-display: swap;
}
@font-face {
  font-family: 'Phantom Sans';
  src: url('https://hackclub.com/fonts/Phantom_Sans_0.4/Bold.woff')
      format('woff'),
    url('https://hackclub.com/fonts/Phantom_Sans_0.4/Bold.woff2')
      format('woff2');
  font-weight: bold;
  font-style: normal;
  font-display: swap;
}

$font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto,
  sans-serif;
$mono: 'SFMono-Regular', 'Roboto Mono', Menlo, monospace;

* {
  box-sizing: border-box;
  font-family: inherit;
  font-weight: inherit;
  text-rendering: optimizeLegibility;
  -webkit-font-smoothing: antialiased;
}
html,
body {
  min-height: 100%;
  min-width: 100%;
}
body {
  display: flex;
  flex-direction: column;
  font-size: 16px;
  font-family: $font-family;
  line-height: 1.5;
  position: relative;
  width: 100%;
  -webkit-font-smoothing: antialiased;
  color: $black;
  margin: 0;
}

h1,
h2,
h3,
.heading,
.stat__value,
.brand-sans {
  font-family: 'Phantom Sans', $font-family;
}
.sans {
  font-family: $font-family;
}
pre,
code,
.mono {
  font-family: $mono;
}

a {
  color: currentColor;
}

strong {
  font-weight: bold;
}

input[type='text'],
input[type='url'],
input[type='email'],
input[type='file'],
input[type='number'],
input[type='tel'],
input[type='password'],
select,
textarea {
  -webkit-appearance: none;
  background-color: $white;
  border-radius: 5px;
  border: 1px solid $gray2;
  color: inherit;
  display: block;
  font-size: 1rem;
  height: 2.5rem;
  outline: 0;
  padding: 0.25rem 0.5rem;
  position: relative;
  transition: border 0.2s ease;
  width: 100%;
  max-width: 24rem;

  &:focus {
    border-color: $base;
  }
}

.input--narrow {
  max-width: 16rem !important;
}

textarea {
  min-height: 4rem;
  line-height: 1.5;
  resize: vertical;
}

.field_with_errors {
  label {
    font-weight: bold;
    color: $red7;
  }
  input {
    border-color: $red7;
  }
}

pre {
  background-color: $gray0;
  border-radius: 4px;
  padding: 12px;
  font-size: 12px;
}

.measure {
  max-width: 36rem;
}

a {
  color: $gray8;

  &:hover &:focus {
    color: $gray9;
  }
}

.field {
  margin-bottom: 0.75rem;
}
.actions {
  margin-top: 1.5rem;
}

.badge {
  background-color: $red5;
  color: $white;
  border-radius: 9999px;
  font-size: 0.75rem;
  font-weight: bold;
  line-height: 1;
  margin-left: 1rem;
  padding: 0.25rem 0.625rem;
}

.status {
  border-radius: 4px;
  display: inline-block;
  margin-right: 4px;
  height: 8px;
  width: 8px;
  position: relative;
  bottom: 2px;
}

.mention {
  display: inline-block;
  vertical-align: middle;
  white-space: nowrap;
  font-size: 0.875em;
  font-weight: 600;
  color: map-get($palette, muted);
  margin-right: 0.25rem;

  img {
    width: 1.5rem;
    margin-right: 0.375rem;
    vertical-align: middle;
    border-radius: 50%;
    overflow: hidden;
  }
}

#error_explanation {
  width: 512px;
  border: 2px solid $red7;
  padding: 1rem;
  margin-bottom: 24px;
  background-color: $red0;
  border-radius: 4px;

  h2 {
    color: $red7;
    border-bottom-color: $red6;
    margin-top: 0;
    font-size: 1.25rem;
  }

  ul {
    margin-bottom: 0;
  }
}

label {
  display: block;
}

$select: "url(<%= asset_url 'select.svg' %>)";
select {
  background: #{$select} right 0.75rem center / 0.5rem no-repeat $white;
}
// rails date(time) inputs
select[name$='i)]'] {
  width: 72px;
  display: inline-block;
}
// rails month inputs should be wider
select[id$='date_2i'] {
  width: 128px;
}

input[type='submit'],
.btn {
  -webkit-appearance: none;
  align-items: center;
  background-color: $base;
  border: 0;
  border-radius: 6px;
  color: $white;
  cursor: pointer;
  display: inline-flex;
  font-family: $font-family;
  font-size: 0.875rem;
  font-weight: bold;
  justify-content: center;
  line-height: 1.5;
  overflow: hidden;
  padding: 0.5rem 1rem;
  position: relative;
  text-align: center;
  text-decoration: none;
  text-transform: uppercase;
  user-select: none;

  svg {
    width: 24px;
    height: 24px;
    position: absolute;
    left: 8px;
    top: 6px;
  }

  &.disabled,
  &[disabled='disabled'] {
    opacity: 0.5;
    cursor: not-allowed;
    pointer-events: none;
  }
}
.btn.btn--destroy {
  background-color: $gray1 !important;
  color: $red5 !important;
}

h1,
h2,
h3,
h4 {
  font-weight: bold;
  line-height: 1.125;
}
h1 {
  font-size: 40px;
  padding-bottom: 8px;
  border-bottom: 1px solid #dde1e4;
  margin-bottom: 1rem;
}
h2,
.summary-h2 {
  font-size: 28px;
  padding-bottom: 4px;
  border-bottom: 1px solid #dde1e4;
  margin-bottom: 0.5rem;
}
h3 {
  font-size: 24px;
}
h4 {
  font-size: 20px;
}

p + p {
  margin-top: 0;
}

.home {
  line-height: 0;
  text-align: center;
  text-decoration: none;
  margin-bottom: -0.5rem;
}

th {
  text-align: left;
  font-weight: bold;
}

td {
  padding-left: 0;
}

.event-summary {
  display: grid;
  grid-gap: 1rem;
  @media (min-width: 32em) {
    grid-template-columns: repeat(2, 1fr);
    grid-gap: 2rem;
  }
}
.event-summary__panel {
  padding: 0.75rem;
  background-color: $white;
  border-radius: 0.5rem;
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.0625),
    0 12px 24px 0 rgba(0, 0, 0, 0.125);
  overflow: hidden;

  h2.heading {
    margin: 0.5rem -0.75rem;
    padding-left: 0.75rem;
    padding-right: 0.75rem;
  }
  &[class*='bg'] h2.heading {
    color: $white;
    border-bottom-color: rgba(255, 255, 255, 0.25);
  }

  .badge {
    background-color: $gray6;
  }
  &[class*='bg'] .badge {
    background-color: rgba(255, 255, 255, 0.25);
  }

  p {
    margin-top: 0.75rem;
    margin-bottom: 0;
  }

  &.bg-primary .stat__label {
    color: $red1;
  }
  &.bg-info .stat__label {
    color: $blue1;
  }
  &.bg-accent .stat__label {
    color: $indigo1;
  }

  .list {
    width: 100% !important;
    margin-left: 0 !important;
    margin-right: 0 !important;
  }

  @media screen and (min-width: 32em) {
    .list {
      max-height: 16rem;
      overflow-y: auto;
      -webkit-overflow-scrolling: touch;
    }
  }
}

.stat {
  display: block;
}
.stat__value {
  font-size: 3rem;
  line-height: 1;
  margin-bottom: 0.25rem;
  text-transform: uppercase;
  &:before {
    content: '$';
    font-size: 1.5rem;
    vertical-align: super;
  }
}
.stat__label {
  display: block;
  font-size: 0.75rem;
  font-weight: bold;
  text-transform: uppercase;
}
.stat--small {
  display: inline-block;
  .stat__value {
    font-size: 2rem;
    &:before {
      font-size: 1rem;
    }
  }
}

.card {
  background-color: $white;
  box-shadow: 0 0 2px 0 rgba(0, 0, 0, 0.0625), 0 4px 8px 0 rgba(0, 0, 0, 0.125);
  padding: 1rem;
  border-radius: 0.5rem;
  overflow: hidden;
}

.invoice-progress {
  background-color: $gray2;
  border-radius: 0.5rem;
  height: 48px;
  line-height: 48px;
  width: 100%;
  position: relative;
  overflow: hidden;
  text-transform: uppercase;
  font-weight: bold;
}
.invoice-progress__paid,
.invoice-progress__remaining {
  display: inline-block;
  height: 100%;
  overflow: hidden;
  left: 0;
}
.invoice-progress__paid {
  position: absolute;
  padding-left: 8px;
  background-color: $teal6;
  color: $white;
  z-index: 1;
}
.invoice-progress__remaining {
  left: 0;
  right: 0;
  padding-right: 8px;
  width: 100%;
  text-align: right;
  color: $gray7;
  z-index: 0;
}

.container {
  width: 100%;
  max-width: 64rem;
  margin: 0 auto;
  padding: 0 1rem;

  &.container--narrow {
    max-width: 32rem;
  }
  &.container--extranarrow {
    max-width: 24rem;
  }
}

.flash {
  background-color: $white;
  border-radius: 4px;
  border: 1px solid currentColor;
  font-weight: 500;
  margin: 24px auto;
  max-width: 24rem;
  padding: 0.75rem 1.25rem;
}

.grid {
  display: grid;
  grid-gap: 1rem;
  width: 100%;

  > a {
    color: inherit;
    text-decoration: none;
  }
}
ul.grid {
  list-style: none;
  padding-left: 0;
}

@media screen and (min-width: 32em) {
  .grid {
    grid-template-columns: repeat(auto-fit, minmax(16rem, 1fr));
  }
}

.transaction--positive {
  background-color: $teal0;
}
.transaction--negative {
  background-color: $red0;
}
.transaction--neutral {
  background-color: $gray0;
}
.transaction--warning {
  background-color: $orange0;
}

.breadcrumb {
  text-transform: uppercase;
  text-decoration: none;
  color: $gray7;
  &:after {
    content: ' Â»';
  }
  + h1,
  + h2 {
    margin-top: 0;
  }
}

.heading {
  display: flex;
  justify-content: center;
  align-items: flex-start;
  flex-direction: column;
  flex-wrap: wrap;
  .btn {
    margin-top: 8px;
    margin-bottom: 4px;
  }
  &.summary-h2 {
    display: inline-flex;
    width: 100%;
  }
}
h2.heading,
h3.heading {
  margin-bottom: 0;
  .btn {
    font-size: 0.75rem;
    line-height: 1.25;
  }
}
@media (min-width: 32em) {
  .heading {
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    .btn {
      margin-left: auto;
      margin-top: 0;
      + .btn {
        margin-left: 0.5rem;
      }
    }
  }
}

$chevron: "url(<%= asset_url 'chevron.svg' %>) right 12px center no-repeat";
.list {
  list-style: none;
  padding: 0;
  margin: 0;
  > a,
  li > a:first-child {
    display: block;
    color: inherit;
    text-decoration: none;
  }
  > a > li,
  > li {
    border-bottom: 1px solid $gray2;
    padding: 12px;
    display: flex;
    flex-direction: column;
    background: #{$chevron};
    &.transaction--positive {
      background: $teal0 #{$chevron};
    }
    &.transaction--negative {
      background: $red0 #{$chevron};
    }
    &.transaction--neutral {
      background: $gray0 #{$chevron};
    }
    &.transaction--warning {
      background: $orange0 #{$chevron};
    }
    &.ultrawhite {
      padding-right: 0;
    }
    > p {
      margin: 0;
    }
  }
  &.list--row > li,
  &.list--row > a > li {
    flex-direction: row;
    align-items: center;
  }
  &.list--row p {
    flex: 1 1 auto;
  }
  .btn {
    font-size: 0.875rem;
    @media screen and (min-width: 32em) {
      margin-top: -4px;
      margin-bottom: -3px;
    }
  }
}
.list--row li {
  flex-direction: row;
}
.list--unlinked li {
  background: white;
  &.bg-snow {
    background: $gray0;
  }
}
h1 + .list,
h1 + .details {
  margin-top: -1rem;
}
h3 + .list {
  border-top: 1px solid $gray2;
}

table {
  border-collapse: collapse;
  width: 100%;
}
tr {
  border-bottom: 1px solid rgba(0, 0, 0, 0.0625);
}
th {
  padding-bottom: 0.125rem;
}
td {
  padding-top: 0.5rem;
  padding-bottom: 0.5rem;
}
td,
th {
  &:first-child {
    padding-left: 0.75rem;
  }
}

.details {
  > p,
  > div {
    display: grid;
    border-bottom: 1px solid $gray2;
    padding-top: 1rem;
    padding-bottom: 1rem;
    margin: 0;

    @media (min-width: 32em) {
      grid-template-columns: 16rem auto;
      grid-gap: 0.5rem;

      strong {
        text-align: right;
      }
    }
  }
}

// Make mobile views nice. Full-bleed separator lines
@media screen and (max-width: 32em) {
  table,
  .list,
  .heading,
  .details,
  h1,
  h2,
  h3 {
    width: 100vw;
    margin-left: -1rem;
    margin-right: -1rem;
  }
  table {
    td,
    th {
      &:first-child {
        padding-left: 1rem;
      }
      &:last-child {
        padding-right: 1rem;
      }
    }
  }
  .list > a > li,
  .list > li,
  .heading,
  .details > p,
  .details > div,
  h1,
  h2,
  h3 {
    padding-left: 1rem;
    padding-right: 1rem;
  }
}

.card h1,
.card h2 {
  margin-right: 0;
  width: 100%;
}

.card .list {
  &,
  > a > li,
  > li {
    margin-right: 2rem;
  }
}

.steps {
  counter-reset: li;
  list-style: none;
  text-align: left;
  padding: 0;
  li {
    position: relative;
    padding-left: 0.5rem;
    margin-bottom: 1rem;
    @media screen and (min-width: 32em) {
      padding-left: 2rem;
    }
    &:before {
      content: counter(li);
      counter-increment: li;
      position: absolute;
      top: -0.25rem;
      left: -1rem;
      height: 2rem;
      width: 2rem;
      line-height: 2rem;
      background-color: $blue5;
      color: $white;
      border-radius: 50%;
      font-weight: bold;
      text-align: center;
    }
    @media screen and (max-width: 32em) {
      &:before {
        left: -2rem;
        top: -0.25rem;
        height: 1.75rem;
        line-height: 1.75rem;
        width: 1.75rem;
      }
    }
  }
}

.emburse-cards {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(16rem, 1fr));
  grid-gap: 1rem;

  @media (min-width: 32em) {
    grid-gap: 2rem;
  }

  a {
    text-decoration: none;
  }

  p {
    margin: 0;
  }
}
.emburse-cards__card {
  display: flex;
  justify-content: space-between;
  flex-direction: column;
  width: 100%;
  max-width: 32rem;
  min-height: 12rem;
  padding: 1.5rem;
  position: relative;
  background-color: #54d;
  background-image: radial-gradient(ellipse at top right, #867ae7, transparent);
  font-family: $mono;
  font-size: 1.25rem;
  color: $white;
  border-radius: 0.5rem;
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.25);
  transition: 0.25s ease-out all;
  transform: scale(1);

  &:focus,
  &:hover {
    box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.25),
      0 18px 36px 0 rgba(0, 0, 0, 0.25);
    transform: scale(1.0625);
  }

  &:before {
    content: '';
    width: 10rem;
    height: 3rem;
    background: url(<%=asset_url'emburse.svg'%>) no-repeat;
    background-size: 100%;
    flex: 1 1 auto;
  }
}
.emburse-cards__card__name {
  text-transform: uppercase;
  font-weight: 600;
}
.emburse-cards__card__number {
  color: rgba(255, 255, 255, 0.5);

  strong {
    font-size: 1.5rem;
    font-weight: 900;
    color: $white;
  }
}
.emburse-cards__caption {
  font-size: 0.875rem;
  color: $gray7;
  text-align: center;
  padding-top: 0.5rem;
}

.comment {
  margin-top: 1rem;
}
.comment__name {
  font-size: 0.875rem;
  color: $gray7;
  margin: 0;
}
.comment__bubble {
  display: inline-block;
  max-width: 28rem;
  background-color: $gray1;
  background-image: linear-gradient(to bottom, $gray0, $gray1);
  padding: 0.5rem 1rem;
  border-radius: 1.25rem;
  font-size: 1rem;

  @media screen and (min-width: 32em) {
    margin-left: -1rem;
  }
}

@import 'basscss';
@import 'space';
@import 'utilities';
