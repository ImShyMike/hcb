@font-face {
  font-family: Averta;
  font-style: normal;
  font-weight: 400;
  font-display: swap;
  src: url(//hackclub.com/fonts/averta-regular.woff2) format('woff2'),
    url(//hackclub.com/fonts/averta-regular.woff) format('woff');
  unicode-range: U + 0000 - F8FE, U + F900-FFFF;
}
@font-face {
  font-family: Averta;
  font-style: normal;
  font-weight: 700;
  font-display: swap;
  src: url(//hackclub.com/fonts/averta-bold.woff2) format('woff2'),
    url(//hackclub.com/fonts/averta-bold.woff) format('woff');
  unicode-range: U + 0000 - F8FE, U + F900-FFFF;
}
@import 'variables';

* {
  box-sizing: border-box;
  font-weight: inherit;
  text-rendering: optimizeLegibility;
  -webkit-font-smoothing: antialiased;
}
html,
body {
  min-height: 100%;
  min-width: 100%;
}
body {
  max-width: 64rem;
  display: flex;
  flex-direction: column;
  font-size: 16px;
  font-family: Averta, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto,
    sans-serif;
  line-height: 1.5;
  position: relative;
  width: 100%;
  -webkit-font-smoothing: antialiased;
  color: #384046;
  margin: 0;
  padding: 16px;
  @media (min-width: 32em) {
    max-width: 64rem;
  }
}

a {
  color: currentColor;
}

strong {
  font-weight: bold;
}

textarea {
  resize: none;
}

input[type='text'],
input[type='url'],
input[type='email'],
input[type='file'],
input[type='number'],
select,
textarea {
  -webkit-appearance: none;
  display: block;
  vertical-align: middle;
  max-width: 32rem;
  min-height: 36px;
  line-height: inherit;
  font-family: inherit;
  font-size: 16px;
  padding-left: 8px;
  padding-right: 8px;
  padding-top: 4px;
  padding-bottom: 4px;
  width: 100%;
  color: inherit;
  background-color: transparent;
  border-radius: 4px;
  border-width: 1px;
  border-style: solid;
  border-color: rgb(221, 225, 228);
  transition: box-shadow 0.125s ease-out;

  &:focus {
    box-shadow: rgb(173, 217, 245) 0 0 0 2px;
    outline: none;
    border-color: rgb(45, 158, 228);
  }
}

$select: "url(<%= asset_url 'select.svg' %>)";
select {
  background: #{$select} right 0.75rem center / 0.5rem no-repeat $white;
}
// rails date(time) inputs
select[name$='i)]'] {
  width: 72px;
  display: inline-block;
}

input[type='submit'],
.btn {
  padding-left: 16px;
  padding-right: 16px;
  padding-top: 8px;
  padding-bottom: 8px;
  background-color: $red5;
  color: $white;
  font-size: 20px;
  display: inline-block;
  vertical-align: middle;
  text-align: center;
  font-family: inherit;
  font-weight: bold;
  line-height: 1.125;
  -webkit-appearance: none;
  cursor: pointer;
  box-shadow: rgba(0, 0, 0, 0.125) 0 2px 4px;
  margin: 0;
  text-decoration: none;
  transition: box-shadow 0.125s ease-out;
  border-radius: 9999px;
  border-width: 0px;
  border-style: solid;
}

h1,
h2,
h3,
h4 {
  font-weight: bold;
  line-height: 1.125;
}
h1 {
  font-size: 40px;
  padding-bottom: 8px;
  border-bottom: 1px solid #dde1e4;
  margin-bottom: 1rem;
}
h2 {
  font-size: 28px;
  padding-bottom: 4px;
  border-bottom: 1px solid #dde1e4;
  margin-bottom: 0.5rem;
}
h3 {
  font-size: 24px;
}
h4 {
  font-size: 20px;
}

p + p {
  margin-top: 0;
}

.home {
  position: absolute;
  top: 0;
  left: 0;
  left: 50%;
  transform: translateX(-50%);
  text-decoration: none;

  + h1 {
    margin-top: 2rem;
  }
}

.event-summary {
  display: flex;
  flex-direction: column;
  justify-content: center;
  border-radius: 4px;
  overflow: hidden;
  max-width: 36rem;
  @media (min-width: 32em) {
    flex-direction: row;
    .event-summary__panel:first-of-type {
      width: 40%;
    }
    .event-summary__panel:last-of-type {
      width: 60%;
    }
  }
}
.event-summary__panel {
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 1rem;
  &.bg-accent .stat__label {
    color: $indigo1;
  }
}

.stat {
  display: block;
  margin-bottom: 16px;
}
.stat__value {
  font-size: 48px;
  line-height: 1;
  margin-bottom: 4px;
  text-transform: uppercase;
  &:before {
    content: '$';
    font-size: 24px;
    vertical-align: super;
  }
}
.stat__label {
  display: block;
  font-size: 12px;
  font-weight: bold;
  text-transform: uppercase;
}
.stat--small {
  .stat__value {
    font-size: 32px;
    &:before {
      font-size: 16px;
    }
  }
}

.card {
  background-color: $white;
  box-shadow: 0 0 2px 0 rgba(0, 0, 0, 0.0125), 0 4px 8px 0 rgba(0, 0, 0, 0.125);
  padding: 20px;
  border-radius: 4px;
}

.invoice-progress {
  background-color: $gray2;
  border-radius: 4px;
  height: 48px;
  line-height: 48px;
  width: 100%;
  position: relative;
  overflow: hidden;
  text-transform: uppercase;
  font-weight: bold;
}
.invoice-progress__paid,
.invoice-progress__remaining {
  display: inline-block;
  height: 100%;
  overflow: hidden;
  left: 0;
}
.invoice-progress__paid {
  position: absolute;
  padding-left: 8px;
  background-color: $teal6;
  color: $white;
  z-index: 1;
}
.invoice-progress__remaining {
  left: 0;
  right: 0;
  padding-right: 8px;
  width: 100%;
  text-align: right;
  color: $gray7;
  z-index: 0;
}

.flash {
  color: $white;
  font-weight: bold;
  padding: 12px 16px;
  border-radius: 4px;
  max-width: 32rem;
}

.transaction--positive {
  background-color: $teal0;
}
.transaction--negative {
  background-color: $red0;
}
.transaction--neutral {
  background-color: $gray0;
}
.transaction--warning {
  background-color: $orange0;
}

.breadcrumb {
  text-transform: uppercase;
  text-decoration: none;
  color: $gray7;
  &:after {
    content: ' Â»';
  }
  + h1,
  + h2 {
    margin-top: 0;
  }
}

.heading {
  display: flex;
  justify-content: center;
  align-items: flex-start;
  flex-direction: column;
  flex-wrap: wrap;
  .btn {
    margin-top: 8px;
    margin-bottom: 4px;
  }
}
h2.heading {
  margin-bottom: 0;
  .btn {
    font-size: 14px;
  }
}
@media (min-width: 32em) {
  .heading {
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    .btn {
      margin-left: auto;
      margin-top: 0;
      + .btn {
        margin-left: 0.5rem;
      }
    }
  }
}

$chevron: "url(<%= asset_url 'chevron.svg' %>) right 12px center no-repeat";
.list {
  list-style: none;
  padding: 0;
  margin: 0;
  a {
    display: block;
    color: inherit;
    text-decoration: none;
  }
  li {
    border-bottom: 1px solid $gray2;
    padding: 12px;
    display: flex;
    flex-direction: column;
    background: #{$chevron};
    &.transaction--positive {
      background: $teal0 #{$chevron};
    }
    &.transaction--negative {
      background: $red0 #{$chevron};
    }
    &.transaction--neutral {
      background: $gray0 #{$chevron};
    }
    &.transaction--warning {
      background: $orange0 #{$chevron};
    }
  }
  &.list--row li {
    flex-direction: row;
  }
}
h1 + .list {
  margin-top: -1rem;
}

