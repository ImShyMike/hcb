  font-size: 28px;
  padding-bottom: 2px;
  border-bottom: 1px solid #dde1e4;
  margin-bottom: 0.5rem;
}
h3 {
  font-size: 24px;
}
h4 {
  font-size: 20px;
}
.flash {
  color: #fff;
  font-weight: bold;
  padding: 12px 16px;
  border-radius: 4px;
  max-width: 32rem;
}
