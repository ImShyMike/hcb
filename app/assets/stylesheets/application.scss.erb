* {
  box-sizing: border-box;
  font-weight: inherit;
  text-rendering: optimizeLegibility;
  -webkit-font-smoothing: antialiased;
  -webkit-appearance: none;
  -moz-appearance: none;
}
html,
body {
  min-height: 100%;
  min-width: 100%;
}
body {
  max-width: 64rem;
  display: flex;
  flex-direction: column;
  font-size: 16px;
  font-family: Averta, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto,
    sans-serif;
  line-height: 1.5;
  position: relative;
  width: 100%;
  -webkit-font-smoothing: antialiased;
  color: #384046;
  margin: 0;
  padding: 16px;
  @media (min-width: 32em) {
    max-width: 64rem;
  }
}

a {
  color: currentColor;
}

textarea {
  resize: none;
}

input[type='text'],
input[type='url'],
input[type='email'],
input[type='file'],
select,
textarea {
  -webkit-appearance: none;
  display: block;
  vertical-align: middle;
  max-width: 32rem;
  min-height: 36px;
  line-height: inherit;
  font-family: inherit;
  font-size: 16px;
  padding-left: 8px;
  padding-right: 8px;
  padding-top: 4px;
  padding-bottom: 4px;
  width: 100%;
  color: inherit;
  background-color: transparent;
  border-radius: 4px;
  border-width: 1px;
  border-style: solid;
  border-color: rgb(221, 225, 228);
  transition: box-shadow 0.125s ease-out;

  &:focus {
    box-shadow: rgb(173, 217, 245) 0 0 0 2px;
    outline: none;
    border-color: rgb(45, 158, 228);
  }
}

$select: "url(<%= asset_url 'select.svg' %>)";
select {
  background: #{$select} right 0.75rem center / 0.5rem no-repeat #fff;
}
// rails date(time) inputs
select[name$='i)]'] {
  width: 72px;
  display: inline-block;
}
input[type='submit'],
.btn {
  padding-left: 16px;
  padding-right: 16px;
  padding-top: 8px;
  padding-bottom: 8px;
  background-color: rgb(228, 45, 66);
  color: rgb(255, 255, 255);
  font-size: 20px;
  display: inline-block;
  vertical-align: middle;
  text-align: center;
  font-family: inherit;
  font-weight: bold;
  line-height: 1.125;
  -webkit-appearance: none;
  cursor: pointer;
  box-shadow: rgba(0, 0, 0, 0.16) 0 2px 4px;
  margin: 0;
  text-decoration: none;
  transition: box-shadow 0.125s ease-out;
  border-radius: 9999px;
  border-width: 0px;
  border-style: solid;
}
h1,
h2,
h3,
h4 {
  font-weight: bold;
}
